@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "../Shared/_LoginLayout.cshtml";
}
<div class="card">
    <div class="card-body login-card-body">

        <div class="row">
            <div class="col-md-12">
                <label>Rest Password</label>
                <div class="form-group">
                    <label></label>
                    <input type="password" id="restPassword" name="restPassword" required class="form-control" />
                </div>
                <label>Confirm Password</label>
                <div class="form-group">
                    <label></label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required class="form-control" />
                </div>
                <button type="button" class="btn btn-primary">Change</button>
                <hr />                
            </div>
        </div>



    </div>
    <!-- /.login-card-body -->
</div>