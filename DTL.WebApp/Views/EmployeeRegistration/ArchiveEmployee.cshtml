@using DTL.Model.Models

@model IEnumerable<EmployeeProfileModel>
@{ ViewData["Title"] = "View Archive Employee Profile";
                int i = 1; }

<!-- Content Header (Page header) -->

<!-- /.content -->
<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Employee Profile Creation View</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="@Url.Action("","Home")">Home</a><span class="px-1">/</span><a href="@Url.Action("","EmployeeRegistration")">Employee List</a><span class="px-1">/</span><span>Archive Employee</span>
        </p>
    </div>
    <div class="card border-card mt-0">
        <div class="card-body pt-0 ps-0 pr-2">
            <div class="my-4 border_bottom pb-4">

                <a href="@Url.Action("","EmployeeRegistration")" class="btn btn-primary btn-sm ">
                    Active Employee Profile Creation
                </a>

            </div>
            <table id="empTbl" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Organization</th>
                        <th>Employee Id</th>
                        <th>GPF Number</th>
                        <th>Employee Name</th>
                        <th>Email</th>
                        <th>Reason</th>
                        <th>Contact</th>
                        <th>Date of Joining</th>
                        <th>Date of Retirement</th>
                        @*<th>Action</th>*@

                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Model)
                    {
                    <tr>
                        <td>@i</td>
                        <td> @data.DTLOffice</td>
                        <td> @data.EmployeeId</td>
                        <th>GPF000</th>
                        <td> @data.EmployeeName</td>
                        <td> @data.EmailAddress</td>

                        <td>@data.DeleteReason</td>
                        <td>7878786453</td>
                        <td>7-12-2022</td>
                        <td>7-12-2022</td>
                        @*<td>
            <a href="@Url.Action("ViewArchiveEmployee", "EmployeeRegistration", new { employeeId = data.ID })" title="view profile"><i class="fa fa-eye"></i></a>

        </td>*@

                    </tr>
i = i + 1;
    }
                </tbody>

            </table>
        </div>

    </div>
    <div class="col-sm-12 mb-3 submit_area submit_area_strip">
        <button class="btn btn-brand me-2" onclick="location.href='employeeProfileCreationList.html'">Back</button>

    </div>
</div>
@section Employee{
    <script src="~/js/Employee/EmployeeList.js" asp-append-version="true"></script>
}