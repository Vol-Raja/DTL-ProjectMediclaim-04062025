@{
    ViewData["Title"] = "Pensioner";
}

@using DTL.Model.Models.UserManagement;
@model IEnumerable<AssignPermissionModel>;
@{
    var _modules = new List<string>() { };
}

<style>
    .small-box p {
        margin-bottom: 0px !important;
    }

        .small-box p a {
            color: inherit;
        }

    .small-box > .inner {
        min-height: 70px !important;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="margin:0px">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Pension Payment Order</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("","Home")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Pension Payment Order</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container">
            <div class="row">
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        if (item.SubModuleName.ToUpper() == "Generate PPO".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-info">
                                    <div class="inner">

                                        <p>Generate PPO</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-person-add"></i>
                                    </div>
                                    <a href="@Url.Action("GeneratePPO","Pensioner")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "View PPO".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <!-- ./col -->
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-success">
                                    <div class="inner">

                                        <p>View PPO</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-stats-bars"></i>
                                    </div>
                                    <a href="@Url.Action("ViewPPO","Pensioner")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "AM Scrutiny".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <!-- ./col -->
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-gradient-olive">
                                    <div class="inner">

                                        <p>AM Scrutiny</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-stats-bars"></i>
                                    </div>
                                    <a href="@Url.Action("AMScrutiny","Pensioner")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "HOD Approval".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-gradient-red">
                                    <div class="inner">
                                        <p>
                                            HOD Approval
                                        </p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-plus"></i>
                                    </div>
                                    <a href="@Url.Action("HODApproval","Pensioner")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "Generate Pension".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-orange">
                                    <div class="inner">
                                        <p>
                                            Generate Pension
                                        </p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-plus"></i>
                                    </div>
                                    <a href="@Url.Action("GeneratePension","Pensioner")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "Pension Slip/ Certificate".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-pink">
                                    <div class="inner">
                                        <p>
                                            Pension Slip/ Certificate
                                        </p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-plus"></i>
                                    </div>
                                    <a href="@Url.Action("PensionSlipCertificate","Pensioner")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
@section DashboardScript{
