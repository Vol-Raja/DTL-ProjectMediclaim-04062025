<link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="margin:0px">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Generate Pension</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("","Home",new { Area="" })">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Pensioner",new { Area="" })">PPO</a></li>
                        <li class="breadcrumb-item active">Generate Pension</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2 form-group">
                                    <label>Year</label>
                                    <input type="text" class="form-control" id="txtYear" placeholder="Select Year">
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Month</label>
                                    <select id="selMonth" name="Month" class="form-control">
                                        <option value="">Select Month</option>
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Bank</label>
                                    <input type="text" class="form-control" placeholder="Enter Bank">
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Employer</label>
                                    <select id="selEmployer" name="Employer" class="form-control">
                                        <option value="">Select DVBETBF-2002 Office</option>
                                        @foreach (var data in ViewBag.DTLOfficeList)
                                        {
                                            <option value="@data.DTLOffice">@data.DTLOffice</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>PPO No.</label>
                                    <input type="text" class="form-control" id="txtPPONo" placeholder="Enter PPO No.">
                                </div>
                                <div class="col-md-2 form-group align-self-end">
                                    <button type="button" id="btnSearch" class="btn btn-lg btn-primary">Search</button>
                                    <button type="button" id="btnCancel" class="btn btn-lg btn-secondary">Cancel</button>
                                </div>
                            </div>

                            <hr />


                            <table id="tblGeneratePension" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Sr. No.</th>
                                        <th>PPO No.</th>
                                        <th>Name of Pensioner</th>
                                        <th>Employer</th>
                                        <th>Monthly Pension</th>
                                        <th>Month - Year</th>
                                        <th>Bank Name</th>
                                        <th>Bank Account No.</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*
                                        @if(Model.Count > 0)
                                        {
                                            <tr>
                                                <td>1</td>
                                                <td>@Model.PensionModel.PPOOrderId</td>
                                                <td>@Model.PensionModel.EmployeeName</td>
                                                <td>@Model.PensionModel.DTLOffice</td>
                                                <td>@Model.PensionModel.AdmissiablePension</td>
                                                <td>2/20201</td>
                                                <td>@Model.PensionModel.BankAccountName</td>
                                                <td>@Model.PensionModel.BankAccountNumber</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8">
                                                    <p>No data found</p>
                                                </td>
                                            </tr>
                                        }
                                    *@
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
