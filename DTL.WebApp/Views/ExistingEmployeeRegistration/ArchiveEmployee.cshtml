@using DTL.Model.Models

@model IEnumerable<EmployeeProfileModel>
@{
    ViewData["Title"] = "View Archive Employee Profile";
    int i = 1;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Archive Employee</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("","Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("","ExistingEmployeeRegistration")">Employee List</a></li>
                    <li class="breadcrumb-item active">Archive Employee</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    @*<div class="card-header">
                            <h3 class="card-title">DataTable with minimal features & hover style</h3>
                        </div>*@
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-md-12" style="padding-bottom: 1%;">
                            <a href="@Url.Action("Index","ExixtingEmployeeRegistration", new { Area="" })" class="btn btn-default mr-3">Active Existing Employee</a>
                            
                        </div>
                        <hr />
                        <table id="empTbl" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>Employee Id</th>
                                    <th>Employee Name</th>
                                    <th>Email</th>
                                    <th>Employer</th>
                                    <th>Reason</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td> @data.EmployeeId</td>
                                        <td> @data.EmployeeName</td>
                                        <td> @data.EmailAddress</td>
                                        <td> @data.DTLOffice</td>
                                        <td>@data.DeleteReason</td>
                                        <td>
                                            <a href="@Url.Action("ViewArchiveEmployee", "EmployeeRegistration", new { employeeId = data.ID })" title="view profile"><i class="fa fa-eye"></i></a>

                                        </td>

                                    </tr>
                                    i = i + 1;
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

@section Employee{
    <script src="~/js/Employee/EmployeeList.js" asp-append-version="true"></script>
}