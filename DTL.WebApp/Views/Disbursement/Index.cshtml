@using DTL.Model.Models.UserManagement;
@model IEnumerable<AssignPermissionModel>;
@{
    var _modules = new List<string>() { };
}

@{
    ViewData["Title"] = "Disbursement";
}


<style>
    .small-box .icon > i.ion {
        font-size: 60px !important;
        top: 0px !important;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"> Disbursement Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("","Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Disbursement</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container">
            <div class="row">
                @if (Model.Count() > 0)
                {

                    foreach (var item in Model)
                    {
                        if (item.SubModuleName.ToUpper() == "TDS Calculation".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-info">
                                    <div class="inner">
                                        @*<h3>150</h3>*@

                                        <p>TDS Calculation</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-person-add"></i>
                                    </div>
                                    <a href="@Url.Action("TDSCalculation", "Disbursement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>

                        }

                        if (item.SubModuleName.ToUpper() == "Age Quantum Pay".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-success">
                                    <div class="inner">
                                        @*<h3>53<sup style="font-size: 20px">%</sup></h3>*@

                                        <p>Age Quantum Pension</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-stats-bars"></i>
                                    </div>
                                    <a href="@Url.Action("AgeQuantamPay", "Disbursement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>

                        }

                        if (item.SubModuleName.ToUpper() == "Recovery/Allowance".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                @*small box*@
                                <div class="small-box bg-gradient-olive">
                                    <div class="inner">
                                        <p>Recovery/Allowance</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-stats-bars"></i>
                                    </div>
                                    <a href="@Url.Action("RecoveryAllowance", "Disbursement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>

                        }

                        if (item.SubModuleName.ToUpper() == "Report".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                @*small box*@
                                <div class="small-box bg-warning">
                                    <div class="inner">
                                        <p>Report</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-person-add"></i>
                                    </div>
                                    <a href="@Url.Action("DisbursementReport", "Disbursement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>

                        }

                    }
                }



                    <!-- ./col -->

