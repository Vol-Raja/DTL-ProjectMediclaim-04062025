@using DTL.Model.Models.UserManagement
@{
    ViewData["Title"] = "Admin User Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool IsReadOnly = ViewBag.IsReadOnly == true;
    bool IsEdit = ViewBag.Mode == "Edit";
}
@model AdminUserModel
<style type="text/css">
    .error {
        border: solid 1px #ff0000;
    }
</style>
@* new design *@
<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle"><i class="fa-solid fa-bars"></i></span>
            <h3 class="mb-0">Admin User Form</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="@Url.Action("Index","Home", new { Area="" })">Dashboard</a>
            <span class="px-1">/</span>
            <span class="px-1">Admin User Form</span>
        </p>
    </div>
    <div class="card border-card mt-0">

        <div class="card-body">

            <form action="/" method="post">
                <input type="hidden" id="hdnRole" value="@ViewBag.Role" />
                <input type="hidden" id="hdnAdminUserId" value="@ViewBag.AdminuserId" />
                <input type="hidden" id="hdnadminUserFormMode" value="@ViewBag.Mode" />
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1" for="txtName">Name<span class="text-danger req_text">*</span></label>
                        <input type="text" value="@Model.Name" class="form-control form-control-sm " placeholder="Enter Name" disabled="@IsReadOnly" id="txtName" required />
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1" for="txtEmailAddress">Email ID<span class="text-danger req_text">*</span></label>
                        <input type="text" value="@Model.EmailAddress" class="form-control" placeholder="Enter Email ID" id="txtEmailAddress" disabled="@IsReadOnly" />
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1" for="txtEmailAddress">Username<span class="text-danger req_text">*</span></label>
                        <input type="text" value="@Model.UserName" class="form-control" placeholder="Enter Email ID" id="txtUsername" required disabled="@(IsReadOnly||IsEdit)" />
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1">Phone Number<span class="text-danger req_text">*</span></label>

                        <input type="text" value="@Model.PhoneNumber" class="form-control" placeholder="Enter Phone Number" id="txtPhoneNumber" required disabled="@IsReadOnly" />
                    </div>

                    <div class="col-md-12 mb-3 submit_area submit_area_strip">
                        @if (IsReadOnly == false)
                        {
                            <button class="btn btn-brand me-2" type="button" id="btnSubmit">Submit</button>

                           
                            <a onclick="showConfirmSwal('Are you sure you want cancel?',function(){ location.href='/Home';  }); return false;" class="btn btn-cancel me-2" role="button">Cancel</a>

                            <button onclick="location.reload(); return false" class="btn btn-reset me-2">Reset</button>
                        }
                        else
                        {
                            <a class="btn btn-cancel me-2" href="~/home">Back</a>
                        }
                    </div>

                </div>
            </form>
        </div>
    </div>

</div>
@section AdminUser{
    <script type="text/javascript" src="~/js/UserManagement/adminuser.js" asp-append-version="true"></script>
}