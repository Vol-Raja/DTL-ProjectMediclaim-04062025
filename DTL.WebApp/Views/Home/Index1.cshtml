    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container">
            <div class="row">
                @switch (ViewBag.Roles)
                {
                    case "Master":
                        <partial name="_masterMenu" />
                        break;
                    case "SuperAdmin":
                        <partial name="_superAdminMenu" />
                        break;
                    case "Admin":
                        <partial name="_adminMenu" />
                        break;
                    case "Pensioner":
                        <partial name="_pensionerMenu" />
                        break;
                    case "Hospitals":
                        <partial name="_hospitalsMenu" />
                        break;
                    case "Existing Employee":
                        <partial name="_existingEmployeeMenu" />
                        break;
                    case "DVB Pension Trust":
                        <partial name="_DVBPensionTrustMenu" />
                        break;
                }


            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
