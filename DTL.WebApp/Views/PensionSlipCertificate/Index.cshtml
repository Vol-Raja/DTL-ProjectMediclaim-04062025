

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dataTables_wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

        .dataTables_wrapper .dt-buttons.btn-group {
            order: -1;
        }

        .dataTables_wrapper .dataTables_length {
            order: -2;
        }
</style>
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="margin:0px">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Pension Slip / Pension Certificate</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home",new { Area="" })">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","PPOGeneration",new { Area="" })">PPO</a></li>
                        <li class="breadcrumb-item active">Pension Slip/Pension Certificate</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 form-group">
                                    <label>Year</label>
                                    <input type="text" class="form-control" id="yearpicker" placeholder="Select Year">
                                </div>
                                <div class="col-md-3 form-group">
                                    <label>Month</label>
                                    <input type="text" class="form-control" id="monthpicker" placeholder="Select Month">
                                </div>
                                <div class="col-md-3 form-group">
                                    <label>PPO No.</label>
                                    <input type="text" class="form-control" placeholder="Enter PPO No.">
                                </div>
                                <div class="col-md-3 form-group">
                                    <label class="d-block">&nbsp;</label>
                                    <button class="btn btn-sm btn-primary">Search</button>
                                </div>
                            </div>

                            <hr />


                            <table id="empTbl" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Sr. No.</th>
                                        <th>PPO No.</th>
                                        <th>Name of Pensioner</th>
                                        <th>Employer</th>
                                        <th>Month - Year</th>
                                        <th>Pension Amount</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td>1</td>
                                        <td>123</td>
                                        <td>Saket Sonawane</td>
                                        <td>Pranay Yadav</td>
                                        <td>2/20201</td>
                                        <td>50000</td>
                                    </tr>


                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="5" style="text-align:right">Total Amount:</th>
                                        <th>545546</th>
                                    </tr>
                                </tfoot>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
@section Employee{

    <script>
        $(document).ready(function () {
            $("#empTbl").DataTable({
                ordering: false,
                dom: 'Blfrtip',
                buttons: [
                    'print',
                    {
                        extend: 'excelHtml5',
                        title: 'Processed Claims'
                    },
                    {
                        extend: 'pdfHtml5',
                        title: 'Processed Claims'
                    },
                    {
                        extend: 'csvHtml5',
                        title: 'Processed Claims'
                    }
                ],
            });

            $('#yearpicker').datepicker({
                format: 'mm-yyyy',
                autoclose: 'true',
                startView: "months",
                minViewMode: "months"
            });
            $('#monthpicker').datepicker({
                format: 'mm-yyyy',
                autoclose: 'true',
                startView: "months",
                minViewMode: "months"
            });
        })
    </script>
}