@{
    ViewData["Title"] = "Home Page";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Grievance Form</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("","Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("","Grievance")">Grievance</a></li>
                        <li class="breadcrumb-item active">Add new grievance</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <form id="frmGrievance" method="post">
                                <input type="hidden" id="id" name="id" value="@Model.ID" />
                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Department / Section</label>
                                    </div>
                                    <div class="col-md-4">
                                        <select class="form-control" id="Department" name="Department">
                                            <option value="">Select Department</option>
                                            @foreach (var data in ViewBag.GrievanceDepartment)
                                            {
                                                if (data.GrievanceDepartment.Equals(Model.Department))
                                                {
                                                    <option value="@data.GrievanceDepartment" selected>@data.GrievanceDepartment </option>
                                                }
                                                else
                                                {
                                                    <option value="@data.GrievanceDepartment">@data.GrievanceDepartment</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">PPO No.</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" id="PPONo" name="PPONo" placeholder="Enter PPO Number" value="@Model.PPONo" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Employee ID</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" id="EmployeeId" name="EmployeeId" placeholder="Enter Employee ID" value="@Model.EmployeeId" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Mobile No</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" id="MobileNo" name="MobileNo" placeholder="Enter Mobile No" value="@Model.MobileNo" />
                                    </div>

                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Subject</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" id="Subject" name="Subject" placeholder="Enter Grievance Subject" value="@Model.Subject" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Grievance in brief suggestion</label>
                                    </div>
                                    <div class="col-md-4">
                                        <textarea type="text" class="form-control" id="GrievanceDetails" name="GrievanceDetails">@Model.GrievanceDetails</textarea>
                                    </div>



                                </div>

                                <div class="row">
                                    <div class="col-md-12 p-3 text-right" style="background: aliceblue;">
                                        @switch (ViewBag.Mode)
                                        {
                                            case "Add":
                                            case "Edit":
                                                {
                                                    <button type="submit" class="btn btn-primary" id="btnSaveGrievance">Save</button>
                                                    break;
                                                }
                                        }


                                        <a href="@Url.Action("","Grievance")" class="btn btn-danger">Cancel</a>
                                    </div>
                                </div>



                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Grievance{
    <script src="~/js/Grievance/Grievance.js" asp-append-version="true"></script>
}