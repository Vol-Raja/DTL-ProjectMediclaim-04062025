

<div class="card" id="searchCriteria">
    <div class="card-body">
        <div class="row col-md-12 p-2">
            <div class="col-md-3">
                <label for="lblFinancialYears">Financial Year</label>
            </div>
            <div class="col-md-3 form-group">
                <select id="FinancialYears" name="FinancialYears" class="form-control">
                    <option value="">Select</option>
                    @foreach (var data in ViewBag.FinancialYear)
                    {
                        <option value="@data">@data</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="lblInvestmentType">Investment Type</label>
            </div>
            <div class="col-md-3 form-group">

                <select id="InvestmentType" name="InvestmentType" class="form-control">
                    <option value="">Select</option>
                    @foreach (var data in ViewBag.InvestmentTypeList)
                    {
                        <option value="@data.InvestmentType">@data.InvestmentType</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="float-sm-right">
            <a class="btn btn-primary btn-sm" id="investmentGraph" href="#"><i class="fas fa-chart-bar"></i> Graph</a>
            <a class="btn btn-primary btn-sm" id="investmenttable" href="#"><i class="fas fa-table"></i> Table</a>
        </div>
        <h4>Investment Analysis</h4>
    </div>
    
</div>

<div row col-sm-12 justify-content-center align-items-center id="investmenttables">
    <table id="tblInvestment" class="table table-striped projects">
        <thead>
            <tr>
                <th>Financial Year</th>
                <th>Investment Type</th>
                <th>Reference Number</th>
                <th>Investment Title</th>
                <th>Investment Amount</th>
                <th>Profit Margin</th>
                <th>Actual ROI</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<div id="investmentGraphs">
    <div class="row">
        <div class="col-md-8">
            <canvas id="myinvestmentinoutFlowChart" width="800" height="400"></canvas>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <h5 class="justify-content-center align-items-center">Investment</h5>
            <canvas id="myinvestmentinFlowChart" width="500" height="300"></canvas>
        </div>
        <div class="col-md-5">
            <h5 class="justify-content-center align-items-center">ROI</h5>
            <canvas id="myinvestmentFlowChart" width="500" height="300"></canvas>
        </div>
    </div>
    <div class="col-sm-12 p-2">
        <div class="row justify-content-center">
            <button type="button" name="btnPrint" id="btnPrint" class="btn btn-primary">Print</button>
        </div>
    </div>
</div>
