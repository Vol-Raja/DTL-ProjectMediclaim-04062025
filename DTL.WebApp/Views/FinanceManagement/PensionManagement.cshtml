@using DTL.Model.Models
@model PensionManagementModel

@{
    ViewData["Title"] = "Pension Management";
}
<style>
    .offset-md-9 {
        display: inline-flex !important;
    }

    .fa-plus-circle {
        cursor: pointer;
    }

    .subCatTbl {
        height: 145px;
        overflow: auto;
        display: block;
    }
</style>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Pension Management</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("","Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("","FinanceManagement")">Finance Management</a></li>
                    <li class="breadcrumb-item active">Pension Management</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="content-wrapper" id="PensionManagement">
    <section class="content pt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary card-outline card-tabs">
                        <div class="card-header p-0 pt-1 border-bottom-0">
                            @*<input type="hidden" id="employeeRegistrationId" value="@ViewBag.EmpId" />*@
                            <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-tabs-three-pensioninflow-tab" data-toggle="pill" href="#custom-tabs-three-pensioninflow" role="tab" aria-controls="custom-tabs-three-pensioninflow" aria-selected="true">Inflow</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-tabs-three-pensionoutflow-tab" data-toggle="pill" href="#custom-tabs-three-pensionoutflow" role="tab" aria-controls="custom-tabs-three-pensionoutflow" aria-selected="false">Outflow</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " id="custom-tabs-three-ioflow-tab" data-toggle="pill" href="#custom-tabs-three-ioflow" role="tab" aria-controls="custom-tabs-three-ioflow" aria-selected="false">Inflow Vs Outflow</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <div class="row col-md-12 p-2">
                                    <div class="col-md-2">
                                        <label for="datepicker" class="text-right d-block">Month/Year</label>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" name="datepicker" id="datepicker" />
                                    </div>
                                    <div class="col-md-2">
                                        <label for="searchByEmployer" class="text-right d-block">Employer</label>
                                    </div>
                                    <div class="col-md-2">
                                        <select id="searchByEmployer" class="form-control" placeholder="Year">
                                            <option value="">Employer Name</option>
                                            @foreach (var data in ViewBag.DTLOfficeList)
                                            {
                                            <option value="@data.DTLOffice">@data.DTLOffice</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label for="searchByEmployeeId" class="text-right d-block">Employee ID</label>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" name="searchByEmployeeId" id="searchByEmployeeId" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 p-2">
                            <div class="card card-primary card-outline card-tabs">
                                <div class="card-body">
                                    <div class="row col-sm-12">
                                        <div class="col-sm-6">
                                            <div class="tab-pane fade active show" id="custom-tabs-three-pensioninflow" role="tabpanel" 
                                                 aria-labelledby="custom-tabs-three-pensioninflow-tab">
                                                <partial name="_pensionInflow" />

                                                
                                            </div>

                                            <div class="tab-pane fade" id="custom-tabs-three-pensionoutflow" role="tabpanel" aria-labelledby="custom-tabs-three-pensionoutflow-tab">
                                                <partial name="_pensionOutflow" />

                                                <table id="pensionRptTbl" class="table table-striped projects">
                                                    <thead>
                                                        <tr>
                                                            <th>Month</th>
                                                            <th>Employee Name</th>
                                                            <th>Emp ID</th>
                                                            <th>Pension Amount</th>
                                                            <th>Employer</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody></tbody>
                                                </table>

                                            </div>
                                            <div class="tab-pane fade" id="custom-tabs-three-ioflow" role="tabpanel" aria-labelledby="custom-tabs-three-ioflow-tab">
                                                <partial name="_pensionInOutflow" />
                                            </div>

                                        </div>
                                        <div class="col-sm-6">
                                            <br>
                                            <br>
                                            <br>
                                            <table id="chart_box">
                                                <tr>
                                                    <td>
                                                        <canvas id="myChart" width="800" height="400" style="background-color:white"></canvas>
                                                    </td>
                                                </tr>
                                            </table>


                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 p-2">
                            <div class="row justify-content-center">
                                <button type="button" name="btnPrint" id="btnPrint" class="btn btn-primary">Print</button>
                            </div>
                        </div>

                    </div>

                </div>
            </div>


        </div>
    </section>
</div>

@section PensionManagement{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.min.js"></script>
    <script src="~/js/FinanceManagement/PensionManagement.js"></script>
    <style>
        .ui-datepicker-calendar {
            display: none;
        }
    </style>
}