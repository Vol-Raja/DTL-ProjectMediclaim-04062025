@using DTL.Model.Models
@model BudgetDeclarationModel
@{
    ViewData["Title"] = "Budget Management";
}

<div class="content-wrapper" id="BudgetManagement">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Budget Management</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("","Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("","FinanceManagement")">Finance Management</a></li>
                        <li class="breadcrumb-item active">Budget Management</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    

    <section class="content pt-3">
        <div class="container">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- jquery validation -->

                    <div class="card card-primary card-outline card-tabs">
                        <!-- /.card-header -->
                        <!-- form start -->
                        @*<div class="card-body">
                            <div class="card card-primary ">*@
                        <div class="card-header p-0 pt-1 border-bottom-0">
                            <input type="hidden" id="employeeRegistrationId" value="@ViewBag.EmpId" />
                            <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="custom-tabs-Budget-Declaration-tab" data-toggle="pill" href="#custom-tabs-Budget-Declaration" role="tab" aria-controls="custom-tabs-Budget-Declaration" aria-selected="true">Budget Declaration</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="custom-tabs-Budget-Revision-tab" data-toggle="pill" href="#custom-tabs-Budget-Revision" role="tab" aria-controls="custom-tabs-Budget-Revision" aria-selected="true">Budget Revision</a>
                                </li>

                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content" id="custom-tabs-three-tabContent">
                                <div class="tab-pane fade active show" id="custom-tabs-Budget-Declaration" role="tabpanel" aria-labelledby="custom-tabs-Budget-Declaration-tab">
                                    <partial name="_BudgetDeclaration"  />
                                </div>
                                <div class="tab-pane fade" id="custom-tabs-Budget-Revision" role="tabpanel" aria-labelledby="custom-tabs-Budget-Revision-tab">
                                    <partial name="_BudgetRevision"  />
                                </div>

                            </div>
                        </div>
                        <!-- /.card -->
                        @*</div>
                            </div>*@
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>

</div>


@section FinanceManagement{
    <script src="~/js/FinanceManagement/BudgetDeclaration.js" asp-append-version="true"></script>
  <script src="~/js/FinanceManagement/BudgetRevision.js" asp-append-version="true"></script>
  <script>
      function FillAllFinancialYear() {
          SelectFinancialYear();
          RevSelectFinancialYear();
      }
      window.onload = FillAllFinancialYear;
      $("#custom-tabs-Budget-Declaration-tab").click(function () {

          GetBudgetDeclareByFinancialYear();
      });
      $("#custom-tabs-Budget-Revision-tab").click(function () {

          GetBudgetDeclarationByFinancialYear();
      });

      
