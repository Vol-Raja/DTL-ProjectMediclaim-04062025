@{
    ViewData["Title"] = "Finance Management";
}
@using DTL.Model.Models.UserManagement;
@model IEnumerable<AssignPermissionModel>;
@{
    var _modules = new List<string>() { };
}
<style>
    .small-box .icon > i.ion {
        font-size: 60px !important;
        top: 0px !important;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Finance Management</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("","Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">FinanceManagement</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container">
            <div class="row">
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        if (item.SubModuleName.ToUpper() == "Budget Management".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-info">
                                    <div class="inner">

                                        <p>Budget Management</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-person-add"></i>
                                    </div>
                                    <a href="@Url.Action("BudgetManagement","FinanceManagement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "Pension Management".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <!-- ./col -->
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-success">
                                    <div class="inner">

                                        <p>Pension Management</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-stats-bars"></i>
                                    </div>
                                    <a href="@Url.Action("PensionManagement","FinanceManagement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "GPF Management".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <!-- ./col -->
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-gradient-olive">
                                    <div class="inner">

                                        <p>GPF Management</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-person-add"></i>
                                    </div>
                                    <a href="@Url.Action("GPFManagement","FinanceManagement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "Financial Analysis".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-warning">
                                    <div class="inner">

                                        <p>Financial Analysis</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-stats-bars"></i>
                                    </div>
                                    <a href="@Url.Action("FinanceAnalysis","FinanceManagement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }

                        if (item.SubModuleName.ToUpper() == "Investments".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-success">
                                    <div class="inner">
                                        
                                        <p>Investments</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-person-add"></i>
                                    </div>
                                    <a href="@Url.Action("InvestmentManagement","FinanceManagement")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>