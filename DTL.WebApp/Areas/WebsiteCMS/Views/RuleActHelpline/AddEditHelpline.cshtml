@using DTL.Model.Models.CMS
@using DTL.WebApp.Areas.WebsiteCMS


@model RuleActHelplineModel
@{
    ViewData["Title"] = Model.IsNew ? "Add Helpline" : Model.ViewOnly ? "View Helpline" : "Edit Helpline";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0"> @ViewData["Title"]</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="@Url.Action("Index","Home",new { Area="" })"><span class="">Dashboard </span> </a>
            <span class="px-1">/</span>
            <a href="@Url.Action("Index", StringConstants.DASHBOARD, new { Area = StringConstants.CMS_AREA })"><span>CMS</span></a>
            <span class="px-1">/</span>
            <a href="@Url.Action( StringConstants.DASHBOARD, StringConstants.CMS_RuleActHelpline, new { Area = StringConstants.CMS_AREA })"><span>Citizen Charter Dashboard</span></a>
            <span class="px-1">/</span>
            <a href="@Url.Action( StringConstants.CMS_Index, StringConstants.CMS_RuleActHelpline, new { Area = StringConstants.CMS_AREA })"><span>Helpline</span></a>
            <span class="px-1">/</span>
            <span>@ViewData["Title"]</span>

        </p>
    </div>

    <div class="card border-card mt-0">
        <div class="card-body">
            <div class="card-body">
                <form id="AddRuleActForm" action="" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="@Model.ID" name="ID" id="ID" />
                    <input type="hidden" value="@Model.IsNew.ToString()" name="IsNew" id="IsNew" />
                    <input type="hidden" value="@Model.IsHelpline.ToString()" name="IsHelpline" id="IsHelpline" />
                    <div class="row">
                        <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Description In English<span class="text-danger req_text">*</span></label>
                            <textarea name="HelplineDescription" class="form-control form-control-sm">@Model.HelplineDescription</textarea>
                        </div> <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Description In Hindi<span class="text-danger req_text">*</span></label>
                            <textarea name="HelplineDescriptionInHindi" class="form-control form-control-sm">@Model.HelplineDescriptionInHindi</textarea>
                        </div>

                        <div class="col-md-12 mb-3 submit_area submit_area_strip">
                            @if (!Model.ViewOnly)
                            {
                                <button id="btnSubmit" type="submit" class="btn btn-brand me-2 @(Model.ViewOnly ? "hide" :"")">@(Model.IsNew ? "Submit" : "Update")</button>

                            }

                         
                            <button onclick="showConfirmSwal('Are you sure you want cancel?',function(){ location.href='/WebsiteCMS/RuleActHelpline?isHelpline=true';  }); return false;" class="btn btn-cancel me-2">Cancel</button>
                            <button onclick="showConfirmSwal('Are you sure you want to Reset?', function(){ location.reload();}); return false; " class="btn btn-reset me-2">Reset</button>
                        </div>



                    </div>
                </form>
            </div>


        </div>
    </div>

</div>

<script type="text/javascript" src="~/js/CMS/RuleActHelpline.js" asp-append-version="true"></script>

