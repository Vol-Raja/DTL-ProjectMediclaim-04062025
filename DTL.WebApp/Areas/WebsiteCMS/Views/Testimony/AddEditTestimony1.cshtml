@{
    ViewData["Title"] = "Message Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DTL.Model.Models.CMS
@using DTL.WebApp.Areas.WebsiteCMS

@model IEnumerable<WhatsNewModel>;
@{

    var _modules = new List<string>() { };
}



<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0"> @ViewData["Title"]</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="@Url.Action("Index","Home",new { Area="" })"><span class="">Dashboard </span> </a>
            <span class="px-1">/</span>
            <a href="@Url.Action("Index", StringConstants.DASHBOARD, new { Area = StringConstants.CMS_AREA })"><span>CMS</span></a>
            <span class="px-1">/</span>
            <a href="@Url.Action("Index","Message", new { Area="WebsiteCMS" })"><span>Message List</span></a>
            <span class="px-1">/</span>
            <span>@ViewData["Title"]</span>

        </p>
    </div>

    <div class="card border-card mt-0">
        <div class="card-body">
            <form id="AddWhatsNewForm" action="" method="post">
                <div class="row">
                    <div class="col-sm-6 col-md-6 mb-3">
                        <label class="form-label d-block mb-1"> Name<span class="text-danger req_text">*</span></label>
                        <input name="TitleInEnglish" type="text" class="form-control form-control-sm" placeholder="Name" />
                    </div>
                    <div class="col-sm-6 col-md-6 mb-3">
                        <label class="form-label d-block mb-1"> Name In Hindi<span class="text-danger req_text">*</span></label>
                        <input name="TitleInHindi" type="text" class="form-control form-control-sm" placeholder="Name in hindi" />
                    </div>
                    <div class="col-sm-6 col-md-6 mb-3">
                        <label class="form-label d-block mb-1"> Position<span class="text-danger req_text">*</span></label>
                        <input name="TitleInEnglish" type="text" class="form-control form-control-sm" placeholder="Position" />
                    </div>
                    <div class="col-sm-6 col-md-6 mb-3">
                        <label class="form-label d-block mb-1"> Position In Hindi<span class="text-danger req_text">*</span></label>
                        <input name="TitleInHindi" type="text" class="form-control form-control-sm" placeholder="Position in hindi" />
                    </div>
                    <div class="col-sm-6 col-md-6 mb-3">
                        <label class="form-label d-block mb-1"> Description<span class="text-danger req_text">*</span></label>
                        <textarea name="TextContentHindi" class="form-control form-control-sm" placeholder="Description In English"></textarea>
                    </div>
                    <div class="col-sm-6 col-md-6 mb-3">
                        <label class="form-label d-block mb-1"> Description In Hindi<span class="text-danger req_text">*</span></label>
                        <textarea name="TextContentHindi" class="form-control form-control-sm" placeholder="Description In Hindi"></textarea>
                    </div>
                    <div class="col-sm-6 col-md-6 mb-3">
                        <label class="form-label d-block mb-1"> Upload Image<span class="text-danger req_text">*</span></label>
                        <input type="file" class="form-control form-control-sm" placeholder="Upload Image" />
                    </div>
                    <div class="col-md-12 mb-3 submit_area submit_area_strip">
                        <button id="btnSubmit" type="submit" class="btn btn-brand me-2"> Submit </button>
                        <a class="btn btn-cancel me-2" role="button">Cancel</a>
                        <button class="btn btn-reset me-2">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>




    <script src="~/js/CMS/Message.js"></script>


