@using DTL.Model.Models.CMS
@using DTL.WebApp.Areas.WebsiteCMS


@model ContactUsModel
@{
    ViewData["Title"] = Model.IsNew ? "Add ContactUs" : Model.ViewOnly ? "View ContactUs" : "Edit ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="@Url.Action("Index","Home",new { Area="" })"><span class="">Dashboard </span> </a>
            <span class="px-1">/</span>
            <a href="@Url.Action("Index", StringConstants.DASHBOARD, new { Area = StringConstants.CMS_AREA })"><span>CMS</span></a>
            <span class="px-1">/</span>
            <a href="@Url.Action("Index", StringConstants.CMS_ContactUs, new { Area = StringConstants.CMS_AREA })"><span>ContactUs List</span></a>
            <span class="px-1">/</span>
            <span>@ViewData["Title"]</span>

        </p>
    </div>

    <div class="card border-card mt-0">

        <div class="card border-card mt-0">

            <div class="card-body">
                <form id="AddContactUsForm" action="" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="@Model.ID" name="ID" id="ID" />
                    <input type="hidden" value="@Model.IsNew.ToString()" name="IsNew" id="IsNew" />
                    <div class="row">
                        <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Name<span class="text-danger req_text">*</span></label>
                            <input name="Name" value="@Model.Name" disabled="@Model.ViewOnly" type="text" class="form-control form-control-sm" placeholder="Name" />
                        </div>
                        <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Name in hindi<span class="text-danger req_text">*</span></label>
                            <input name="NameHindi" value="@Model.NameHindi" disabled="@Model.ViewOnly" type="text" class="form-control form-control-sm" placeholder="Name in hindi" />
                        </div>
                        <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Designation<span class="text-danger req_text">*</span></label>
                            <input name="Designation" value="@Model.Designation" disabled="@Model.ViewOnly" type="text" class="form-control form-control-sm" placeholder="Designation" />
                        </div>
                        <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Designation In hindi<span class="text-danger req_text">*</span></label>
                            <input name="DesignationHindi" value="@Model.DesignationHindi" disabled="@Model.ViewOnly" type="text" class="form-control form-control-sm" placeholder="Designation In hindi" />
                        </div>
                        <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Telephone<span class="text-danger req_text">*</span></label>
                            <input name="Telephone" value="@Model.Telephone" disabled="@Model.ViewOnly" type="number" class="form-control form-control-sm" placeholder="Telephone" />
                        </div>
                        <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Mobile Number<span class="text-danger req_text">*</span></label>
                            <input name="PhoneNumber" value="@Model.PhoneNumber" disabled="@Model.ViewOnly" type="number" class="form-control form-control-sm" placeholder="Mobile Number" />
                        </div>
                        <div class="col-sm-6 col-md-6 mb-3">
                            <label class="form-label d-block mb-1">Email Id<span class="text-danger req_text">*</span></label>
                            <input name="EmailAddress" value="@Model.EmailAddress" disabled="@Model.ViewOnly" type="email" class="form-control form-control-sm" placeholder="Email Id" />
                        </div>
                        <div class="col-md-12 mb-3 submit_area submit_area_strip">
                            <button type="submit" id="btnSubmit" class="btn btn-brand me-2 @(Model.ViewOnly? "hide" :"")">@(Model.IsNew ? "Submit" : "Update")</button>
                            
                            <button onclick="showConfirmSwal('Are you sure you want cancel?',function(){ location.href='/WebsiteCMS/ContactUs';  }); return false;" class="btn btn-cancel me-2">Cancel</button>
                            <button onclick="showConfirmSwal('Are you sure you want to Reset?', function(){ location.reload();}); return false; " class="btn btn-reset me-2">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/js/CMS/ContactUs.js" asp-append-version="true"></script>

