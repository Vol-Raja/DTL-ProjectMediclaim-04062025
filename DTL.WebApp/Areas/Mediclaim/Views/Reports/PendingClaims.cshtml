    (function ($) {
        $('#report').DataTable({
            dom: 'lBfrtip',
            buttons: [
                'excel',
                'csvHtml5',
                'pdfHtml5'
            ],
            "ordering": false,
            "sScrollX": "100%",
            "sScrollXInner": "100%",
            "bAutoWidth": false,
            "bJQueryUI": true,
            "bRetrieve": true,
