
@{ ViewData["Title"] = "PendingClaims";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Pending Claims</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="@Url.Action("Index","OPD", new { Area = "Mediclaim" })">Dashboard</a><span class="px-1">/</span><a href="@Url.Action("Index","Reports", new { Area = "Mediclaim" })">Reports</a>
        </p>
    </div>

    <div class="card border-card mt-0">
        <div class="card-body pt-0 ps-0 pr-2">
            <div class="my-4 border_bottom pb-4 row">


                
                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2 ">
                    <label class="form-label d-block mb-1">Claim No.</label>
                    <input type="Number" class="form-control form-control-sm"
                           placeholder="Claim No." />
                </div>

                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2">
                    <label class="form-label d-block mb-1">Application Date From</label>
                    <input type="date" class="form-control" id="txtFromDate" />
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2">
                    <label class="form-label d-block mb-1">Application Date To</label>
                    <input type="date" class="form-control" id="txtToDate" />
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2  position-relative">
                    <button class="btn btn-success  position-absolute bottom-0"><i class="fa fa-search"></i></button>
                    <button class="btn btn-danger position-absolute bottom-0 clear_btn"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="">
                <table id="report" class="table table-bordered ">
                    <thead>
                        <tr>
                            <th width="7%" class="text-center">Sr. No.</th>
                            <th>Date</th>
                            <th>Claim No. </th>
                            <th>Medical Card No.</th>
                            <th>Hospital Name </th>
                            <th>Card Category</th>
                            <th>Patient Name</th>
                            <th>Application Date From</th>
                            <th>Application Date To</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">1</td>
                            <td>12/12/2022</td>
                            <td>ClaimGF78687 </td>
                            <td>67859658</td>
                            <td>City Hospital</td>
                            <td>2000</td>
                            <td>Priyansha </td>
                            <td>21-02-2022</td>
                            <td>11-02-2022</td>
                   
                            <td class="d-flex border-bottom-0">
                                <a href="~/Mediclaim/Report/CashlessPreview/1" class="btn btn-primary btn-sm mr-2 btn_small"><i class="fa fa-eye" aria-hidden="true"></i></a>
                               
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div><!-- col -->
