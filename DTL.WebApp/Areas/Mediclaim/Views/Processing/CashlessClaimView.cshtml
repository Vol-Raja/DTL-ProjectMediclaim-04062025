@section CashlessClaimsView{
    <script type="text/javascript" src="~/js/Mediclaim/Processing/approverejectcashless.js"></script>
    <script src="~/js/numbertoword.js"></script>
    <script>
        $(document).ready(function () {
            var numberToWord = new NumberToWord();
            if ($('#txtApprovedAmount').val() !== '0') {
                $('#txtApproveAmountInWords').val(numberToWord.ToWord($('#txtApprovedAmount').val()))
            }

            $('#txtApprovedAmount').focusout(function () {
                $('#txtApproveAmountInWords').val(numberToWord.ToWord($('#txtApprovedAmount').val()))
            });

        });
    </script>
}

