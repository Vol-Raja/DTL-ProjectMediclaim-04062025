@{
    ViewData["Title"] = "AddNewMedicalPageDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <!-- Content Header (Page header) -->

    <!-- /.content-header -->
    <!-- Main content -->


    <div class="container-fluid">
        <div class="row header_section mx-0 px-0">
            <div class="col-6 position-relative ps-0">
                <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                    <i class="fa-solid fa-bars"></i>
                </span>
                <h3 class="mb-0">Medical Page Details Form </h3>
            </div>
            <p class="mb-0 col-6 top_link_Section">
                <a href="@Url.Action("Index","Home",new { Area="" })">Dashboard</a> <span class="px-1">/</span><a href="@Url.Action("OPDMedicalPageDetails","MedicalPageDetail",new { Area="Mediclaim" })">Medical Page Detail List</a><span class="px-1">/</span>
                <span>Medical Page details form</span>
            </p>
        </div>
        <div class="card border-card mt-0">

            <div class="card-body">
                <form id="medicalPageForm" class="g-3 mt-2 needs-validation" novalidate>
                    <input type="hidden" id="hdnMedicalPageDetailId" />

                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-2 mb-3">
                            <label class="form-label d-block mb-1">
                                Page No.<span class="text-danger req_text">*</span>
                            </label>
                            <input type="number" id="txtPageNumber" class="form-control form-control-sm "
                                   placeholder="page No" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-2  mb-3">
                            <label class="form-label d-block mb-1" for="name">
                                Employee No.<span class="text-danger req_text">*</span>
                            </label>
                            <input type="text" id="txtEmployeeNumber" class="form-control form-control-sm "
                                   placeholder="Employee No" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-2  mb-3">
                            <label class="form-label d-block mb-1" for="name">
                                PPO No<span class="text-danger req_text">*</span>
                            </label>
                            <input type="text" class="form-control form-control-sm "
                                   placeholder="PPO No" id="txtPPONumber" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-6  mb-3">
                            <label class="form-label d-block mb-1" for="name">
                                Name<span class="text-danger req_text">*</span>
                            </label>
                            <input type="text" id="txtName" class="form-control form-control-sm "
                                   placeholder="Name" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">Gender</label>
                            <div class="d-flex mt-3 gender-radio">
                                <div class="form-check me-3">
                                    <input class="form-check-input" type="radio" name="gender" id="rdMale" value="Male" checked="checked">
                                    <label class="form-check-label" for="male">
                                        Male
                                    </label>
                                </div>
                                <div class="form-check me-3">
                                    <input class="form-check-input" type="radio" name="gender" id="rdFemale" value="Female">
                                    <label class="form-check-label" for="female">
                                        Female
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender" id="rdOther" value="Other">
                                    <label class="form-check-label" for="other">
                                        Other
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                Organization<span class="text-danger req_text">*</span>
                            </label>
                            <select class="form-select" id="selOrganization" name="Organization">
                                <option value="">Select</option>
                                <option value="DPCL - Delhi Power Company Limited">DPCL - Delhi Power Company Limited</option>
                                <option value="IPGCL - Indraprastha Power Generation Company Limited">IPGCL - Indraprastha Power Generation Company Limited</option>
                                <option value="DTL - Delhi Transco Limited">DTL - Delhi Transco Limited</option>
                                <option value="BRPL - BSES Rajdhani Power Limited">BRPL - BSES Rajdhani Power Limited</option>
                                <option value="BYPL - BSES Yamuna Power Limited">BYPL - BSES Yamuna Power Limited</option>
                                <option value="TPDDL - Tata Power Delhi Distribution Limited">TPDDL - Tata Power Delhi Distribution Limited</option>
                            </select>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-6 mb-3">
                            <label class="form-label d-block mb-1" for="name">
                                Department<span class="text-danger req_text">*</span>
                            </label>
                            <select id="txtDepartment" name="txtDepartment" class="form-select" required>
                                <option value="">Select</option>
                                <option value="GPF">GPF</option>
                            </select>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-6  mb-3">
                            <label class="form-label d-block mb-1" for="name">
                                Designation<span class="text-danger req_text">*</span>
                            </label>
                            <input type="text" id="txtDesignation" class="form-control form-control-sm"
                                   placeholder="Designation" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-6 mb-3">
                            <label class="form-label d-block mb-1">
                                 Category<span class="text-danger req_text">*</span>
                            </label>
                            <select id="selCardCategory" class="form-select" required>
                                <option value="0">Select</option>

                                <option value="General">General</option>
                                <option value="SemiPrivate">Semi Private</option>
                                <option value="private">private</option>
                            </select>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3  mb-3">
                            <label class="form-label d-block mb-1">
                                Mobile Number<span class="text-danger req_text">*</span>
                            </label>
                            <input type="number" class="form-control form-control-sm" placeholder="Mobile Number" id="txtMobileNumber" name="txtMobileNumber" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                Date Of Birth<span class="text-danger req_text">*</span>
                            </label>
                            <input type="Date" class="form-control form-control-sm" placeholder="Date Of Birth" />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                Age<span class="text-danger req_text">*</span>
                            </label>
                            <input type="number" class="form-control form-control-sm" placeholder="Age" />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                Date Of Retirement<span class="text-danger req_text">*</span>
                            </label>
                            <input type="date" id="txtDateOfRetirement" name="txtDateOfRetirement" class="form-control form-control-sm"
                                   placeholder="Date Of Retirement" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                LBP<span class="text-danger req_text">*</span>
                            </label>
                            <input type="Number" id="txtLBP" name="txtLBP" class="form-control form-control-sm"
                                   placeholder="LBP" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                Spouse Name<span class="text-danger req_text">*</span>
                            </label>
                            <input type="text" id="txtSpouseName" name="txtSpouseName" class="form-control form-control-sm"
                                   placeholder="Spouse Name" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                Dispensary<span class="text-danger req_text">*</span>
                            </label>
                            <input type="Number" class="form-control form-control-sm"
                                   placeholder="Dispensary" id="txtDispensary" name="txtDispensary" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                Relationship with Retiree<span class="text-danger req_text">*</span>
                            </label>
                            <input type="Number" class="form-control form-control-sm"
                                   placeholder="Relationship with Retiree" id="txtRelationWithRetiree" name="txtRelationWithRetiree" required />
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <label class="form-label d-block mb-1">
                                DOB Of Dependent<span class="text-danger req_text">*</span>
                            </label>
                            <input type="Number" id="dtDependentDob" name="dtDependentDob" class="form-control form-control-sm"
                                   placeholder="DOB Of Dependent" required />
                        </div>

                    </div>

                    <div class="col-md-12 mb-3 submit_area submit_area_strip">
                        <a class="btn btn-brand me-2" role="button" id="btnSubmit" data-toggle="modal" data-target="">Submit </a>
                        <button class="btn btn-cancel me-2">Cancel</button>
                        <button class="btn btn-reset me-2" id="btnReset">Reset</button>

                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="medicalPageModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">New Medical Page Detail</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body text-center">
                                    <i class="fa fa-check-circle display-4 text-green" aria-hidden="true"></i>
                                    <p>Medical Page Detail Submitted Successfully</p>
                                    @*<p>Medical Page Detail Number is <b><label id="lblMedicalPageDetailNumber"></label></b></p>*@
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-info" data-dismiss="modal" id="btnViewPrint">View and Print Card</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <!-- /.content -->

@section AddNewMedicalPageDetail{
    <script type="text/javascript" src="~/js/Mediclaim/MedicalPageDetail/medicalpagedetail.js"></script>
}