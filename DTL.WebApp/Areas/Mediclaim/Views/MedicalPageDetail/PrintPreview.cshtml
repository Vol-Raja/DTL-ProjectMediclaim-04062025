@using DTL.Model.Models.Mediclaim
@model MedicalPageDetailModel
@{
    ViewData["Title"] = "Medical Page Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .top_print_btn {
        position: absolute;
        right: 20px;
        top: 30px;
    }
</style>
<div class="content-wrapper" style="margin:0px">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Non-Cashless Mediclaim Application</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home",new { Area="" })">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard",new { Area="Mediclaim" })">Mediclaim</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","MedicalPageDetail",new { Area="Mediclaim" })">Medicalpage Detail List</a></li>
                        <li class="breadcrumb-item active">Medical Page Detail</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h2 class="text-center mb-3">Medical Page Details</h2>
                            <button class="btn btn-primary btn-sm top_print_btn float-right d-print-none printMe"><i class="fa fa-print mr-2" aria-hidden="true"></i>Print</button>
                            <table class="table table-bordered mb-3">
                                <tr>
                                    <td class="text-right" style="width: 20%">Page Number</td>
                                    <th style="width: 30%">@Model.PageNumber</th>
                                    <td class="text-right" style="width: 20%">Employee Number</td>
                                    <th style="width: 30%">@Model.EmployeeNumber</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Name</td>
                                    <th>@Model.Name</th>
                                </tr>
                                <tr>
                                    <td class="text-right">PPO Number</td>
                                    <th>@Model.PPONumber</th>
                                    <td class="text-right">Designation</td>
                                    <th>@Model.Designation</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Department</td>
                                    <th>@Model.Department</th>
                                    <td class="text-right">Card Category</td>
                                    <th>@Model.CardCategory</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Mobile Number</td>
                                    <th>@Model.MobileNumber </th>
                                    <td class="text-right">Date of Retirement</td>
                                    <th>@Model.DateOfRetirement</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Spouse Name</td>
                                    <th>@Model.SpouseName</th>
                                    <td class="text-right">LBP</td>
                                    <th>@Model.LBP</th>

                                </tr>
                                <tr>
                                    <td class="text-right">Dispensary</td>
                                    <th>@Model.Dispensary</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Name Of Dependent</td>
                                    <th>@Model.NameOfDependent</th>
                                    <td class="text-right">Relation Of Retiree</td>
                                    <th>@Model.RelationWithRetiree</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Date Of Birth</td>
                                    <th>@Model.DependentDob.ToString("dd/MM/yyyy")</th>
                                </tr>
                            </table>
                            <div class="row d-print-none">
                                <div class="col-md-12 p-3 text-center">
                                    <button class="btn btn-primary printMe"><i class="fa fa-print mr-2" aria-hidden="true"></i>Print Application</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>


@section NonCashlessPrintPreview{
    <script>
        $('.printMe').click(function () {
            window.print();
        });
    </script>
}


