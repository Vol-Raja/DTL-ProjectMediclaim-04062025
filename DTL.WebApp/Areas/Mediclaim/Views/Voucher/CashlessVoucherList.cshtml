
@{
    ViewData["Title"] = "Medical Vouchers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Mediclaim Voucher List</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="/">Dashboard</a><span class="px-1">/</span><span>Voucher List</span>
        </p>
      
    </div>

    <div class="card border-card mt-0">
        <div class="card-body pt-0 ps-0 pr-2">
            <div class="my-4 border_bottom pb-4 row">


                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2 ">
                    <label class="form-label d-block mb-1">Voucher No.</label>
                    <input type="number" class="form-control form-control-sm"
                           placeholder="Voucher Number" />
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2 ">
                    <label class="form-label d-block mb-1">Claim No.</label>
                    <input type="Number" class="form-control form-control-sm"
                           placeholder="Claim No." />
                </div>

                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2">
                    <label class="form-label d-block mb-1">Card Category</label>
                    <select name="claimType" id="claimType" class="form-select ">
                        <option value="">Select</option>
                        <option value="0">Private</option>
                        <option value="1">Semi Private</option>
                    </select>
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2">
                    <label class="form-label d-block mb-1">Organization</label>
                    <select name="claimType" id="claimType" class="form-select ">
                        <option value="0">Select</option>
                        <option value="1">Organization</option>

                    </select>
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2 col-xl-2  position-relative">
                    <button class="btn btn-success  position-absolute bottom-0"><i class="fa fa-search"></i></button>
                    <button class="btn btn-danger position-absolute bottom-0 clear_btn"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="table-responsive">
                <table id="voucherTbl" class="table table-bordered ">
                    <thead>
                        <tr>
                            <th width="7%" class="text-center">Sr. No.</th>
                            <th>Date</th>
                            <th>Voucher No.</th>
                            <th>PPO No.</th>
                            <th>Claim No. </th>
                            <th>Account No.</th>
                            <th>Approved Amount</th>
                            <th>IFSC No.</th>
                            <th>BIC Code</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td class="text-center">1</td>
                            <td>12/12/2022</td>
                            <td>FGFGF78687 </td>
                            <td>67859658</td>
                            <td>cla87909</td>
                            <td>876578968769</td>
                            <td>2000</td>

                            <td>SBI0078756</td>
                            <td>BIC98789</td>
                            <td class="d-flex border-bottom-0 justify-content-center">
                                <a href="voucherRaiseView.html" class="btn btn-primary btn-sm mr-2 btn_small"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                <a href="#" class="btn btn-info btn-sm mr-2 btn_small"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                <a href="#" class="btn btn-danger btn-sm mr-2 btn_small"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                <!-- Modal -->
                            </td>
                        </tr>



                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>
<script>
       (function ($) {
           $('#voucherTbl').DataTable({
                dom: 'lBfrtip',
                buttons: [
                'excel',
                'csvHtml5',
               'pdfHtml5'
                ],
                "ordering": false,
                "sScrollX": "100%",
                "sScrollXInner": "100%",
                "bAutoWidth": false,
                "bJQueryUI": true,
                "bRetrieve": true,
                "bAutoWidth": true
            });

        })(jQuery);
</script>
