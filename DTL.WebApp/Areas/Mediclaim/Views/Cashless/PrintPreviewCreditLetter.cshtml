
@using DTL.Model.Models.Mediclaim
@model CashlessModel
@{ ViewData["Title"] = "Credit Letter";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<style>
    .top_print_btn {
        position: absolute;
        right: 20px;
        top: 30px;
    }
</style>

<!--NEW UI-->
<div class="container-fluid view_form">
    <div class="row header_section mx-0 px-0 ">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Cashless Credit Letter View </h3>

        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="/"> Dashboard</a><span class="px-1">/</span><a href="@Url.Action("Index","Cashless",new {Area="Mediclaim" })">Cashless Mediclaim</a><span class="px-1">/</span><span> View</span>
        </p>
    </div>

    <div class="view_container_bg">
        @*<input type="hidden" id="hdnAppoveAmount" value="@Model.ApprovedAmountInDecimal" />*@
        <div class="card border-card  mt-0">
            <div class="card-body view_container_bg">
                <h4 class="form_title shadow-2-strong ">
                    Detail Of Hospital
                </h4>
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 mb-3 view_text_border">
                        <label class="form-label d-block mb-1" for="name">
                            Name Of Hospital
                        </label>
                        <p class="View_text">@Model.NameOfHospital</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">
                            Hospital Id
                        </label>
                        <p class="View_text">@Model.HospitalId</p>
                    </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Phone Number</label>
                        <p class="View_text">@Model.HospitalPhoneNumber</p>
                    </div>
                    <div class="col-sm-6 col-md-3 col-lg-3 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Email Id</label>
                        <p class="View_text">@Model.EmailId</p>
                    </div>
                    <div class="col-sm-12 col-md-9 col-lg-9 col-xl-9 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Address</label>
                        <p class="View_text">@Model.HospitalAddress</p>
                    </div>

                </div>

                <h4 class="form_title mt-3 shadow-2-strong">
                    General Details
                </h4>
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Date Of Issue</label>
                        <p class="View_text">@Model.IssueDate.ToString("dd-MM-yyyy")</p>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Case Type</label>
                        <p class="View_text">@Model.CASE_TYPE</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Admission Date</label>
                        <p class="View_text">@Model.DateOfAdmission.ToString("dd-MM-yyyy")</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Serial No</label>
                        <p class="View_text">@Model.SerialNo</p>
                    </div>
                </div>

                <h4 class="form_title mt-3 shadow-2-strong">
                    Detail Of Patients
                </h4>
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3  mb-3 view_text_border">
                        <label class="form-label d-block mb-1" for="name">PPO Number</label>
                        <p class="View_text">@Model.PPONumber</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Pensioner Name</label>
                        <p class="View_text">@Model.PensionerName</p>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Employee No</label>
                        <p class="View_text">@Model.EmployeeNo</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Patient Name</label>
                        <p class="View_text">@Model.PatientName</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Relation With Retiree</label>
                        <p class="View_text">@Model.Relation</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Category Of Room</label>
                        <p class="View_text">@Model.CategoryOfRoom</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Name Of Docter</label>
                        <p class="View_text">@Model.NameOfDoctor</p>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Docter Mobile No</label>
                        <p class="View_text">@Model.Doctor_NO</p>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Patient Mobile Number</label>
                        <p class="View_text">@Model.PatientNo</p>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Provisional Diagnosis</label>
                        <p class="View_text">@Model.ProvisionalDiagnosis</p>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1" for="name">Duration Of Stay</label>
                        <p class="View_text">@Model.DurationOfStay</p>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1" for="name">Organization Name</label>
                        <p class="View_text">@Model.Organization</p>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1" for="name">Intended Treatment</label>
                        <p class="View_text">@Model.IstendedTreatment</p>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                        <label class="form-label d-block mb-1">Address</label>
                        <p class="View_text">@Model.ResidentAddress</p>
                    </div>
                </div>

                <h4 class="form_title mt-3 shadow-2-strong">
                    Claim Document Upload
                </h4>
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered view_table">
                            <thead>
                                <tr>
                                    <th width="7%" class="text-center">Sr. No.</th>
                                    <th>Document Type</th>
                                    <th width="15%" class="text-center">Attach file </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Documents.Count() > 0)
                                {

                                    var index = 1;
                                    @foreach (var item in Model.Documents)
                                    {
                                        <tr>
                                            <td>
                                                @index
                                            </td>
                                            <td>
                                                @item.DocumentFor
                                            </td>
                                            <td>
                                                <a href="/@item.DocumentPath" class="pdfIcons" target="_blank">
                                                    <i class="fa fa-file-pdf" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        index = index + 1;
                                    }}
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
@section CashlessPrintPreview{
    <script src="~/js/numbertoword.js"></script>
    <script>
        $(document).ready(function () {
            var numberToWord = new NumberToWord();
            $('#lblAmountInWords').text(numberToWord.ToWord($('#hdnAppoveAmount').val()));
        });</script>
}
