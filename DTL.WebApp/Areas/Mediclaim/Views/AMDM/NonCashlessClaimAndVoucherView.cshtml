                                </div>

                                <div class="col-sm-12 col-md-9 col-lg-9 col-xl-9 mb-3 view_text_border">
                                    <label class="form-label d-block mb-1">Address</label>
                                    <p class="View_text">@Model.NonCashless.Address</p>
                                </div>
                            </div>
                        </div>
                        @if (Model.NonCashless.Dependent != null && Model.NonCashless.ClaimFor.ToLower() == "dependent")
                        {
                            <div class="border-card  border-top-0 ">
                                <h4 class="form_title">
                                    Dependent Information
                                </h4>
                                <div class="row ">

                                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                                        <label class="form-label d-block mb-1"> Name</label>
                                        <p class="View_text">@Model.NonCashless.Dependent.Name</p>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                                        <label class="form-label d-block mb-1">Date Of Birth</label>
                                        <p class="View_text">@Model.NonCashless.Dependent.DateOfBirth.ToString("dd-MM-yyyy")</p>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                                        <label class="form-label d-block mb-1">Age</label>
                                        <p class="View_text">@Model.NonCashless.Dependent.Age</p>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3 view_text_border">
                                        <label class="form-label d-block mb-1">
                                            relationship with retiree
                                        </label>
                                        <p class="View_text">@Model.NonCashless.Dependent.RelationWithRetire</p>
                                    </div>
                                </div>
                            </div>

