@using DTL.Model.Models.Mediclaim
@model IEnumerable<NonCashlessModel>
@{ 
    ViewData["Title"] = "NonCashless Processing";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int index = 0;
}
<div class="container-fluid">
    <div class="row header_section mx-0 px-0 ">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Non Cashless Mediclaim View </h3>

        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="@Url.Action("Index", "AMDM",new { Area="Mediclaim"})">Dashboard </a><span class="px-1">/</span> <a href="@Url.Action("ClaimForwardDashboard", "AMDM",new { Area="Mediclaim"})">Claim Forword Dashboard </a><span class="px-1"> /</span><span>Claim Forward List</span>
           </p>
            </div>

    <div class="card border-card mt-0">
        <div class="card-body ps-0 pr-2 pt-5">
            <div class="table-responsive">

                <table id="tblClaims" class="table table-bordered ">
                    <thead>
                        <tr>
                            <th width="7%" class="text-center">Sr. No.</th>
                            <th>Date</th>
                            <th>Claim No.</th>
                            <th>PPO No</th>
                            <th>Voucher No.</th>
                            <th>Card Category</th>
                            <th>Patient Name</th>
                            <th>Organization</th>
                            <th>Claim Amt.</th>
                            <th>Approved Amt.</th>
                            <th>Page No.</th>
                            <th>Account No.</th>
                            <th>IFSC Code</th>
                            <th>BIC Code</th>
                            <th>Branch Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                index = index + 1;

                                <tr>
                                    <td width="7%" class="text-center">@index</td>                                 
                                    <td>@item.CreatedDate.ToString("dd-MM-yyyy")</td>
                                    <td>@item.ClaimId</td>
                                    <td>@item.PPONumber</td>
                                    <td>@item.VoucherId</td>
                                    <td>@item.CardCategory</td>
                                    <td>@item.PatientName</td>
                                    <td>@item.Organization</td>
                                    <td>@item.ApprovedAmount</td>
                                    <td>@item.ApprovedAmount</td>
                                    <td>@item.MedicalSectionPageNumber</td>
                                    <td>@item.AccountNumber</td>
                                    <td>@item.IFSCNumber</td>
                                    <td>@item.BICCode</td>
                                    <td>@item.BranchName</td>
                                    <td class="d-flex border-bottom-0">
                                        <a href="/Mediclaim/AMDM/NonCashless/View/@item.ClaimId" class="btn btn-primary btn-sm mr-2 btn_small">
                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                        </a>
                                        <!-- Modal -->
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="16">
                                    No Data found
                                </td>
                            </tr>
                        }
                    </tbody> 
                </table>
            </div>
          

        </div>
    </div>


</div>


<!-- /.content-wrapper -->
@section NonCashlessClaims{
    <script>
        (function ($) {
            $('#tblClaims').DataTable({
                dom: 'lBfrtip',
                buttons: [
                    'excel',
                    'pdfHtml5',
                    'csvHtml5'
                ],
                "ordering": false,
                "sScrollX": "100%",
                "sScrollXInner": "100%",
                "bAutoWidth": false,
                "bJQueryUI": true,
                "bRetrieve": true,
                "bAutoWidth": true
            });

        })(jQuery);
    </script>


}
