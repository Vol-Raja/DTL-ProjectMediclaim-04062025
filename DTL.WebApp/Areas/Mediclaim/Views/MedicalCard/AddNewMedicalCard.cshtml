
@{ ViewData["Title"] = "AddNewMedicalCard";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Medical card Details </h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a class="" href="@Url.Action("Index","Home",new { Area="" })"> Dashboard </a><span class="px-1">/</span><a href="@Url.Action("Index","MedicalCard",new { Area="Mediclaim"})">Medical card Details List</a><span class="px-1">/</span>
            <span>Medical card details form</span>
        </p>
    </div>
    <div class="card border-card mt-0">

        <div class="card-body">
            <form class="g-3 mt-2 needs-validation" novalidate>
                <h4 class="form_title shadow-2-strong ">
                    Card Details
                </h4>

                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Medical Card number<span class="text-danger req_text">*</span>
                        </label>
                        <input type="Number" class="form-control form-control-sm"
                               placeholder="Medical Card Number" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3  mb-3">
                        <label class="form-label d-block mb-1" for="name">
                            Employee Number<span class="text-danger req_text">*</span>
                        </label>
                        <input type="text" id="name" class="form-control form-control-sm "
                               placeholder="Employee Number" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3  mb-3">
                        <label class="form-label d-block mb-1" for="name">
                            PPO Number<span class="text-danger req_text">*</span>
                        </label>
                        <input type="text" id="name" class="form-control form-control-sm "
                               placeholder="PPO Number" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3  mb-3">
                        <label class="form-label d-block mb-1">
                            Mobile Number<span class="text-danger req_text">*</span>
                        </label>
                        <input type="number" class="form-control form-control-sm" placeholder="Mobile Number" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-6  mb-3">
                        <label class="form-label d-block mb-1">
                            Email Id<span class="text-danger req_text">*</span>
                        </label>
                        <input type="email" class="form-control form-control-sm" placeholder="Email id" />
                    </div>


                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-6  mb-3">
                        <label class="form-label d-block mb-1">
                            Name of card holder / pensioner<span class="text-danger req_text">*</span>
                        </label>
                        <input type="email" class="form-control form-control-sm" placeholder="Name of card holder pensioner" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-6 mb-3">
                        <label class="form-label d-block mb-1">
                            Organization<span class="text-danger req_text">*</span>
                        </label>
                        <select name="" id="" class="form-select ">
                            <option value="">Select</option>
                        </select>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Date Of Birth<span class="text-danger req_text">*</span>
                        </label>
                        <input type="Date" class="form-control form-control-sm" placeholder="Date Of Birth" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Age<span class="text-danger req_text">*</span>
                        </label>
                        <input type="number" class="form-control form-control-sm" placeholder="Age" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">Gender</label>
                        <div class="d-flex mt-3">
                            <div class="form-check me-3">
                                <input class="form-check-input" type="radio" name="male" id="male">
                                <label class="form-check-label" for="male">
                                    Male
                                </label>
                            </div>
                            <div class="form-check me-3">
                                <input class="form-check-input" type="radio" name="female" id="female">
                                <label class="form-check-label" for="female">
                                    Female
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="other" id="other">
                                <label class="form-check-label" for="other">
                                    Other
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Medical Section Page No<span class="text-danger req_text">*</span>
                        </label>
                        <input type="number" class="form-control form-control-sm"
                               placeholder="Medical Section Page No" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-6 mb-3">
                        <label class="form-label d-block mb-1">
                            Card Category<span class="text-danger req_text">*</span>
                        </label>
                        <select name="" id="" class="form-select ">
                            <option value="">Select</option>
                        </select>
                    </div>


                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1">
                            Address<span class="text-danger req_text">*</span>
                        </label>
                        <textarea class="form-control form-control-sm" placeholder="Address"></textarea>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1">
                            medical History<span class="text-danger req_text">*</span>
                        </label>
                        <textarea class="form-control form-control-sm" placeholder="Address"></textarea>
                    </div>

                </div>
                <h4 class="form_title mt-3 shadow-2-strong">
                    Bank Details
                </h4>
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Bank Name<span class="text-danger req_text">*</span>
                        </label>
                        <input type="text" class="form-control form-control-sm" placeholder="Bank Name" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            BIC Code<span class="text-danger req_text">*</span>
                        </label>
                        <input type="number" class="form-control form-control-sm" placeholder="BIC Code" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Branch Name<span class="text-danger req_text">*</span>
                        </label>
                        <input type="text" class="form-control form-control-sm" placeholder="Branch Name" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            IFSC Code<span class="text-danger req_text">*</span>
                        </label>
                        <input type="Number" class="form-control form-control-sm" placeholder="IFSC Code" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Account Number<span class="text-danger req_text">*</span>
                        </label>
                        <input type="Number" class="form-control form-control-sm"
                               placeholder="Account Number" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Name Of Dependent<span class="text-danger req_text">*</span>
                        </label>
                        <input type="Number" class="form-control form-control-sm"
                               placeholder="Name Of Dependent" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            Relationship with Retiree<span class="text-danger req_text">*</span>
                        </label>
                        <input type="Number" class="form-control form-control-sm"
                               placeholder="Relationship with Retiree" />
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-3">
                        <label class="form-label d-block mb-1">
                            DOB Of Dependent<span class="text-danger req_text">*</span>
                        </label>
                        <input type="Number" class="form-control form-control-sm"
                               placeholder=">DOB Of Dependent" />
                    </div>

                </div>


                <div class="col-md-12 mb-3 submit_area submit_area_strip">
                    <a class="btn btn-brand me-2" role="button">Generate Card</a>
                    <button class="btn btn-cancel me-2">Cancel</button>
                    <button class="btn btn-reset me-2">Reset</button>

                </div>
            </form>
        </div>
    </div>

</div>