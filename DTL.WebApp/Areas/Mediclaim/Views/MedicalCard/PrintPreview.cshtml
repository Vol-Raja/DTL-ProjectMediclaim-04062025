@using DTL.Model.Models.Mediclaim
@model MedicalCardModel
@{
    ViewData["Title"] = "PrintPreview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .top_print_btn {
        position: absolute;
        right: 20px;
        top: 30px;
    }
</style>
<div class="content-wrapper" style="margin:0px">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Mediclaim Card Details</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home",new { Area="" })">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard",new { Area="Mediclaim" })">Mediclaim</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","MedicalCard",new { Area="Mediclaim" })">Mediclaim Card List</a></li>
                        <li class="breadcrumb-item active">Mediclaim Card Details</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="text-center mb-3">Medical Card</h2>
                            <table class="table table-bordered mb-3">
                                <tr>
                                    <td class="text-right" style="width: 20%">Medical Card No.</td>
                                    <th style="width: 30%">@Model.CardNo</th>
                                    <td class="text-right" style="width: 20%">Employee No.</td>
                                    <th style="width: 30%">@Model.EmployeeNo</th>
                                </tr>
                                <tr>
                                    <td class="text-right">PPO No.</td>
                                    <th>@Model.PPONo</th>
                                    <td class="text-right">Name of Card Holder/ Pensioner</td>
                                    <th>@Model.NameOfCardHolder</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Employer</td>
                                    <th>@Model.Employer</th>
                                    <td class="text-right">Date of Birth</td>
                                    <th>@Model.DateOfBirth.ToShortDateString()</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Age</td>
                                    <th>@Model.Age</th>
                                    <td class="text-right">Gender</td>
                                    <th>@Model.Gender</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Medical Section Page Number</td>
                                    <th>@Model.MedicalSectionPageNo</th>
                                    <td class="text-right">Card Category</td>
                                    <th>@Model.CardCategory</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Mobile No.</td>
                                    <th>@Model.MobileNumber</th>
                                    <td class="text-right">Address</td>
                                    <th>@Model.Address</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Medical History</td>
                                    <th>@Model.MedicalHistory</th>
                                </tr>
                                <tr>
                                    <th colspan="4" class="text-center bg-gray-light">Bank Details</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Bank Name</td>
                                    <th>@Model.BankName</th>
                                    <td class="text-right">BIC Code</td>
                                    <th>@Model.BICCode</th>
                                </tr>
                                <tr>
                                    <td class="text-right">IFSC Code</td>
                                    <th>@Model.IFSCCode</th>
                                    <td class="text-right">Account No.</td>
                                    <th>@Model.AccountNumber</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Name Of Dependent</td>
                                    <th>@Model.NameOfDependent</th>
                                    <td class="text-right">Relation Of Retiree</td>
                                    <th>@Model.RelationWithRetiree</th>
                                </tr>
                                <tr>
                                    <td class="text-right">Date Of Birth</td>
                                    <th>@Model.DependentDob.ToString("dd/MM/yyyy")</th>
                                </tr>
                            </table>
                            <div class="row d-print-none">
                                <div class="col-md-12 p-2 text-right" style="background: aliceblue">
                                    <button class="btn btn-primary printMe"><i class="fa fa-print mr-2" aria-hidden="true"></i>Print Voucher</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>

@section MedicalCardPrintPreview{
    <script>
        $('.printMe').click(function () {
            window.print();
        });
    </script>
}