</div>

@section EditNonCashless{
    <script type="text/javascript" src="~/js/Mediclaim/Modify/noncashless.js"></script>

    <script>
        function isNumberKey(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }

        function decimalNumberKey(evt, obj) {

            var charCode = (evt.which) ? evt.which : event.keyCode
            var value = obj.value;
            var dotcontains = value.indexOf(".") != -1;
            if (dotcontains)
                if (charCode == 46) return false;
            if (charCode == 46) return true;
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }


        var ClaimType = '';
        function update() {
            ClaimType = $('#selClaimType').val();
            //ClaimType = $('#selClaimType :selected').text();
            //calculateTotal();
        }

        //update();

        function calculateTotal() {
            var _claim = $('#selClaimType').val();
            ClaimType = _claim !== '' ? _claim : '';
            var cndMedicine = '';
            var cndInvestigation = '';
            var cndConsultation = '';
            var cndOther = '';
            var cndTotal = '';

            cndMedicine = $('#txtCNDMedicineAmount').val() !== '' ? $('#txtCNDMedicineAmount').val() : 0;
            cndInvestigation = $('#txtCNDInvestigationAmount').val() !== '' ? $('#txtCNDInvestigationAmount').val() : 0;
            cndConsultation = $('#txtCNDConsultationAmount').val() !== '' ? $('#txtCNDConsultationAmount').val() : 0;
            cndOther = $('#txtCNDOtherAmount').val() !== '' ? $('#txtCNDOtherAmount').val() : 0;
            cndTotal = parseFloat(cndMedicine) + parseFloat(cndInvestigation) + parseFloat(cndConsultation) + parseFloat(cndOther);

            document.getElementById('txtCNDTotalAmount').value = cndTotal;
                        //$('#txtCNDTotalAmount').val() = cndTotal;
        }

        (function () {
        })();
    </script>
}
