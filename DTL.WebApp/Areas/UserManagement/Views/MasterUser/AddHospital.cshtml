@{ ViewData["Title"] = " Add Hospital Name";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container-fluid">

    <div class="row header_section mx-0 px-0 border_bottom">
        <div class="col-5 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle"><i class="fa-solid fa-bars"></i></span>
            <h3 class="mb-0"> Add Hospital Name </h3>
        </div>
        <p class="mb-0 col-7 top_link_Section"><a href="@Url.Action("Index","Home", new { Area="" })"> Dashboard </a><span class="px-1">/</span><a href="@Url.Action("", "MasterUser", new { Area = "UserManagement" })">Master Management</a><span class="px-1">/</span><span>Add Designation</span></p>
    </div>
    <div class="card border-card mt-0">

        <div class="card-body">

            <div class="row">
                <div class="col-sm-6 mb-3">
                    <label class="form-label d-block mb-1" for="name"> Add Hospital Name<span class="text-danger req_text">*</span></label>
                    <input type="text" id="name" class="form-control form-control-sm" placeholder=" Add Hospital Name" required="">

                </div>

                <div class="col-md-12 mb-3 submit_area submit_area_strip">
                    <a class="btn btn-brand me-2" role="button">Submit</a>

                    <button class="btn btn-cancel me-2">Cancel</button>
                    <button class="btn btn-reset me-2">Reset</button>

                </div>

            </div>

        </div>
    </div>



</div>