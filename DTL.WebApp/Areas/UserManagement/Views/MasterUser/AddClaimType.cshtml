@{ ViewData["Title"] = "Add Claim";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="container-fluid">

    <div class="row header_section mx-0 px-0 border_bottom">
        <div class="col-5 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle"><i class="fa-solid fa-bars"></i></span>
            <h3 class="mb-0">Add Claim Type </h3>
        </div>
        <p class="mb-0 col-7 top_link_Section"><span class="">Master Mangement </span><span class="px-1">/</span><span> Claim Type List</span><span class="px-1">/</span><span>Add Claim Type</span></p>
    </div>
    <div class="card border-card mt-0">

        <div class="card-body">
            <form class="row g-3 mt-2 needs-validation" novalidate="">
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1" for="name">Claim Type <span class="text-danger req_text">*</span></label>
                        <input type="text" id="name" class="form-control form-control-sm" placeholder="Claim Type" required="">

                    </div>


                    <div class="col-md-12 mb-3 submit_area submit_area_strip">
                        <a class="btn btn-brand me-2" data-bs-toggle="modal" data-bs-target="#submit_pop_up" role="button">Submit</a>

                        <button class="btn btn-cancel me-2">Cancel</button>
                        <button class="btn btn-reset me-2">Reset</button>

                    </div>

                </div>
            </form>
        </div>
    </div>



</div>