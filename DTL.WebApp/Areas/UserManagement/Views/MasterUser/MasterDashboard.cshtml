@{ ViewData["Title"] = "Master Dashboard";
 Layout = "~/Views/Shared/_Layout.cshtml"; }
<style>
    .small-box p {
        margin-bottom: 0px !important;
    }

        .small-box p a {
            color: inherit;
        }

    .small-box > .inner {
        min-height: 70px !important;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="container-fluid">
    <div class="row header_section mx-0 px-0 border_bottom">
        <div class="col-5 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Master Management</h3>
        </div>
        <p class="mb-0 col-7 top_link_Section">
            <a href="@Url.Action("Index","Home",new { Area="" })"><span class="">Dashboard </span> </a>
            <span class="px-2"> /</span><span>Master Management</span>
        </p>
    </div>
    <div class="container-fluid pd-x-0 pd-lg-x-10 pd-xl-x-0 pt-3">
        <div class="row row-xs">

            <div class="col-sm-6 col-lg-3 mt-2">
                <div class="card dashboard background-skyBlue">
                    <a href="@Url.Action("hospitalList", "MasterUser", new { Area = "UserManagement" })">
                        <div class="card-body">
                            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                                <h5 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1 box_title">Hospital List</h5>
                                <i class="fa-solid fa-house-chimney-medical"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div><!-- col -->
            <div class="col-sm-6 col-lg-3 mt-2">
                <div class="card dashboard background-green">
                    <a  href="@Url.Action("claimTypeList", "MasterUser", new { Area = "UserManagement" })">
                        <div class="card-body">
                            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                                <h5 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1 box_title">Claim type</h5>
                                <i class="fa-solid fa-list"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div><!-- col -->
            <div class="col-sm-6 col-lg-3 mt-2">
                <div class="card dashboard background-orange">
                    <a href="@Url.Action("TypeOfClaimList", "MasterUser", new { Area = "UserManagement" })">
                        <div class="card-body">
                            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                                <h5 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1 box_title">Type of claim </h5>
                                <i class="fa-solid fa-exclamation"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div><!-- col -->

            <div class="col-sm-6 col-lg-3 mt-2">
                <div class="card dashboard background-pink">
                    <a href="@Url.Action("MedicalCardCategoryList", "MasterUser", new { Area = "UserManagement" })">
                        <div class="card-body">
                            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                                <h5 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1 box_title">Medial card category</h5>
                                <i class="fa-solid fa-check-to-slot"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div><!-- col -->
            <div class="col-sm-6 col-lg-3 mt-2">
                <div class="card dashboard background-purple">
                    <a href="@Url.Action("DepartmentList", "MasterUser", new { Area = "UserManagement" })">
                        <div class="card-body">
                            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                                <h5 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1 box_title">Department</h5>
                                <i class="fa-solid fa-building"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div><!-- col -->
            <div class="col-sm-6 col-lg-3 mt-2">
                <div class="card dashboard background-pink">
                    <a href="@Url.Action("DesignationList", "MasterUser", new { Area = "UserManagement" })">
                        <div class="card-body">
                            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                                <h5 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1 box_title">Designation</h5>
                                <i class="fa-solid fa-user-graduate"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div><!-- col -->
            <div class="col-sm-6 col-lg-3 mt-2">
                <div class="card dashboard background-yellow">
                    <a href="@Url.Action("OrganizationList", "MasterUser", new { Area = "UserManagement"})">
                        <div class="card-body">
                            <div class="d-flex d-lg-block d-xl-flex align-items-end">
                                <h5 class="tx-normal tx-rubik mg-b-0 mg-r-5 lh-1 box_title">Organization</h5>
                                <i class="fa fa-building"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div><!-- col -->
        </div>
    </div>
</div>
     </div>
