@using DTL.Model.Models.UserManagement
@model IEnumerable<DVBUserModel>
@{
    ViewData["Title"] = "DVBUser List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>DVB Users</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area="" })">Dashboard</a></li>
                    <li class="breadcrumb-item active">DVB Users</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    @*<div class="card-header">
                            <h3 class="card-title">DataTable with minimal features & hover style</h3>
                        </div>*@
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-md-12" style="padding-bottom: 1%;">
                            <a href="@Url.Action("DVBUserForm","DVBUser", new { Area = "UserManagement" })" class="btn btn-default mr-3">Add New DVB user</a>
                            <a href="@Url.Action("DVBUserArchive","DVBUser", new { Area = "UserManagement" })" class="btn btn-default">Archives</a>
                        </div>
                        <table id="empTbl" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>DVB User id</th>
                                    <th>Email ID</th>
                                    <th>Department</th>
                                    <th>Designation</th>
                                    <th>Generate Credential</th>
                                    <th>Assign Permission</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model.Count() > 0)
                                {
                                    int index = 1;
                                    
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>@item.DVBUserId</td>
                                            <td>@item.EmailAddress</td>
                                            <td>@item.Department</td>
                                            <td>@item.Designation</td>
                                            <td>
                                                <a href="javascript:void(0)" data-dvbUserId="@item.DVBUserId" class="generateDVBUserCredential" title="Generate Credential">
                                                    Generate Credential
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/UserManagement/AssignPermission/DVBUser/@item.EmailAddress" data-empId=""  title="Generate Credential">
                                                    Assign permission
                                                </a>
                                            </td>
                                            <td class="d-flex justify-content-around">
                                                @*<a href="#" title="view" onclick=""><i class="fa fa-eye"></i></a>*@
                                                <a href="/UserManagement/DVBUser/DVBUserForm/Edit/@item.DVBUserId" title="edit" onclick=""><i class="fa fa-user-edit"></i></a>
                                                <a href="javascript:void(0)" onclick="DeleteDVBUser(@item.DVBUserId,this)" title="delete User" class="deleteEmp" data-empId=""><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>

                                        index++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8">No Data Found</td>
                                    </tr>
                                }

                                @*<tr>
                                    <td>1</td>
                                    <td>123</td>
                                    <td>doctor@gmail.com</td>
                                    <td>Department</td>
                                    <td>Doctor</td>
                                    <td>
                                        <a href="javascript:void(0)" data-empId="" class="generateCredential" title="Generate Credential">
                                            Generate Credential
                                        </a>
                                    </td>
                                    <td>
                                        <a href="javascript:void(0)" data-empId="" class="generateCredential" title="Generate Credential">
                                            Assign permission
                                        </a>
                                    </td>
                                    <td class="d-flex justify-content-around">
                                        <a href="#" title="view" onclick=""><i class="fa fa-eye"></i></a>
                                        <a href="#" title="edit" onclick=""><i class="fa fa-user-edit"></i></a>
                                        <a href="javascript:void(0)" title="delete employee" class="deleteEmp" data-empId=""><i class="fa fa-trash"></i></a>


                                    </td>

                                </tr>*@
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

@section DVBUser{
    <script src="~/js/UserManagement/dvbuser.js" asp-append-version="true"></script>
}