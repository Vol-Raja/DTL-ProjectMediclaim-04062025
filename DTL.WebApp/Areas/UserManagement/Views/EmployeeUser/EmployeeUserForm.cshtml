@using DTL.Model.Models.UserManagement
@{
    bool IsNew = Model.ID == default;
    ViewData["Title"] = Model.ID == default ? "Add Employee User" : Model.IsReadOnly ? "View Employee User" : "Edit Employee User";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model EmployeeUserModel

<style type="text/css">
</style>

<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        @*<p class="mb-0 col-6 top_link_Section">
                <a href='@Url.Action("HospitalUserList","HospitalUser",new { Area = "UserManagement" })'>Hospital list </a>
                <span class="px-1">/</span>
                <span>@ViewData["Title"]</span>
            </p>*@
    </div>
    <div class="card border-card mt-0">
        <form id="EmployeeUserForm">
            <input type="hidden" id="ID" name="ID" value="@Model.ID" />
            <input type="hidden" id="IsNew" name="IsNew" value="@IsNew.ToString()" />
            <input type="hidden" id="EmpUserId" name="EmpUserId" value="@Model.EmpUserid" />
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1">Name of Employee<span class="text-danger req_text">*</span></label>
                        <input type="text" name="NameOfEmployee" value="@Model.NameOfEmployee" disabled="@Model.IsReadOnly" class="form-control form-control-sm" placeholder="Name Of Employee" />

                        <select style="display:none" name="" id="" class="form-select form-select-sm">
                            <option value="">Select</option>

                        </select>
                    </div>

                    @*<div class="col-sm-6 mb-3">
                            <label class="form-label d-block mb-1">PPO Number<span class="text-danger req_text">*</span></label>
                            <input type="text" name="PPONumber" value="@Model.PPONumber" disabled="@Model.IsReadOnly" class="form-control form-control-sm" placeholder="Enter PPO Number" />
                        </div>*@

                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1">Email id<span class="text-danger req_text">*</span></label>
                        <input type="email" name="EmailAddress" value="@Model.EmailAddress" disabled="@Model.IsReadOnly" class="form-control form-control-sm" placeholder="Email Id" />
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1">Contact No.<span class="text-danger req_text">*</span></label>
                        <input type="number" maxlength="10" name="PhoneNumber" value="@Model.PhoneNumber" disabled="@Model.IsReadOnly" class="form-control form-control-sm" placeholder="Contact No." />
                    </div>

                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1">Name of Authorized Person<span class="text-danger req_text">*</span></label>
                        <input type="text" name="AuthorizedPerson" value="@Model.AuthorizedPerson" disabled="@Model.IsReadOnly" class="form-control form-control-sm" placeholder="Name of Authorized Person" />
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="position-relative error_right_main_div">
                            <label class="form-label d-block mb-1">User Name<span class="text-danger req_text">*</span></label>
                            <input type="text" name="Username" value="@Model.Username" disabled="@(Model.IsReadOnly || Model.ID != default)" class="form-control form-control-sm" placeholder="Enter PPO Number" />
                        </div>
                    </div>



                    <div class="col-sm-6 mb-3">
                        <label class="form-label d-block mb-1">Address<span class="text-danger req_text">*</span></label>
                        <textarea name="Address" value="@Model.Address" disabled="@Model.IsReadOnly" class="form-control form-control-sm" placeholder="Address">@Model.Address</textarea>
                    </div>


                    <div class="col-md-12 mb-3 submit_area submit_area_strip">
                        @if (Model.IsReadOnly == false)
                        {
                            <button class="btn btn-brand me-2" id="btnSubmit" role="button">@(Model.ID == default ? "Submit" : "Update")</button>
                            @*<a onclick="showConfirmSwal('Are you sure you want cancel?',function(){ location.href='/UserManagement/HospitalUser/HospitalUserList';  }); return false;" class="btn btn-cancel me-2" role="button">Cancel</a>*@
                            <button class="btn btn-reset me-2" onclick="location.reload();return false;">Reset</button>
                        }
                        else
                        {
                            @*<a onclick="location.href='/UserManagement/HospitalUser/HospitalUserList'; return false;" class="btn btn-cancel me-2" role="button">Back</a>*@

                        }
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

@section EmployeeUser{
    <script src="~/js/UserManagement/Employeeuser.js"></script>
}
