@{
    ViewData["Title"] = "SubModule Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .error {
        border: solid 1px #ff0000;
    }
</style>
<div class="content-wrapper" style="margin:0px">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Sub Module Form</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area="" })">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="#">Sub Modules</a></li>
                        <li class="breadcrumb-item active">Sub Module Form</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <form action="/" method="post">
                                <input type="hidden" id="hdnsubmoduleid" value="@ViewBag.SubModuleId" />
                                <input type="hidden" id="hdnsubmoduleFormMode" value="@ViewBag.Mode" />
                                <div class="row form-group">
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right" for="">Module</label>
                                    </div>
                                    <div class="col-md-4">
                                        <select id="selModule" name="selModule" class="form-control">
                                            <option value="">Select</option>
                                            @foreach (var data in ViewBag.ModuleList)
                                            {
                                                <option value="@data.ModuleName">@data.ModuleName</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right" for="">Sub Module Name</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Sub Module Name" id="txtsubModuleName" required />
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-12 p-3 text-right" style="background: aliceblue;">
                                        <button type="button" class="btn btn-primary" id="btnSubmit">Submit</button>
                                        <a href="/UserManagement/SubModule/SubModuleList" class="btn btn-danger">Cancel</a>
                                        <a class="btn btn-info">Reset</a>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
@section SubModule{
    <script type="text/javascript" src="~/js/UserManagement/submodule.js"></script>


}