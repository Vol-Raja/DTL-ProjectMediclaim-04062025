@using DTL.Model.Models.UserManagement
@model IEnumerable<ModuleModel>
@{
    ViewData["Title"] = "Module List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Modules</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area="" })">Dashboard</a></li>
                    <li class="breadcrumb-item active">Modules</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    @*<div class="card-header">
                            <h3 class="card-title">DataTable with minimal features & hover style</h3>
                        </div>*@
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="col-md-12" style="padding-bottom: 1%;">
                            <a href="@Url.Action("ModulesForm","Module", new  { Area = "UserManagement" })" class="btn btn-default mr-3">Add New Module</a>
                            <a href="@Url.Action("ModuleArchive","Module", new  { Area = "UserManagement" })" class="btn btn-default">Archives</a>
                        </div>
                        <table id="empTbl" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>Module ID</th>
                                    <th>Module Name</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    int index = 1;
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>@item.ModuleId</td>
                                            <td>@item.ModuleName</td>
                                            <td class="d-flex justify-content-around">
                                                <a href="/UserManagement/Module/ModuleForm/Edit/@item.ModuleId" title="edit"><i class="fa fa-user-edit"></i></a>
                                                <a href="javascript:void(0)" title="delete" class="deleteEmp" onclick="DeleteModule(@item.ModuleId,this)"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>

                                        index++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4">No Data Found</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

@section Module{
    <script src="~/js/UserManagement/module.js" asp-append-version="true"></script>
}