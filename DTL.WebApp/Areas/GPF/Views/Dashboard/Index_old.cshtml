@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using DTL.Model.Models.UserManagement;
@model IEnumerable<AssignPermissionModel>;
@{
    var _modules = new List<string>() { };
}

<style>
    .small-box p {
        margin-bottom: 0px !important;
    }

        .small-box p a {
            color: inherit;
        }

    .small-box > .inner {
        min-height: 70px !important;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="margin:0px">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">GPF</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area="" })">Dashboard</a></li>
                        <li class="breadcrumb-item active">GPF</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container">
            <div class="row">
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        if (item.SubModuleName.ToUpper() == "Processing".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-info">
                                    <div class="inner">

                                        <p>GPF Processing</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-person-add"></i>
                                    </div>
                                    <a href="@Url.Action("Index","Processing", new { Area="GPF" })" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }
                        if (item.SubModuleName.ToUpper() == "Withdrawal".ToUpper() && !_modules.Contains(item.SubModuleName.ToUpper()))
                        {
                            _modules.Add(item.SubModuleName.ToUpper());
                            <!-- ./col -->
                            <div class="col-lg-3 col-6">
                                <!-- small box -->
                                <div class="small-box bg-success">
                                    <div class="inner">

                                        <p>GPF Withdrawl</p>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-stats-bars"></i>
                                    </div>
                                    <a href="@Url.Action("Index","Withdrawal", new { Area="GPF" })" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        }
                    }
                }



                <!-- ./col -->

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
