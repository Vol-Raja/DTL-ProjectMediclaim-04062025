@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="margin: 0px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Loan Processing</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area ="" })">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard", new { Area ="GPF" })">GPF</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Withdrawal", new { Area ="GPF" })">GPF Withdrawal</a></li>
                        <li class="breadcrumb-item active">Loan Processing</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <input type="hidden" id="hdnCreate" value="@ViewBag.Create" />
                            <input type="hidden" id="hdnEdit" value="@ViewBag.Edit" />
                            <input type="hidden" id="hdnView" value="@ViewBag.View" />
                            <input type="hidden" id="hdnDelete" value="@ViewBag.Delete" />
                            <h4>GPF Approved Dashboard</h4>
                            <div class="row" style="padding-bottom: 1%;">
                                <div class="col-md-2">
                                    <label>Employer</label>
                                    <select id="selEmployer" name="Employer" class="form-control">
                                        <option value="">Select DVBETBF-2002 Office</option>
                                        @foreach (var data in ViewBag.DTLOfficeList)
                                        {
                                            <option value="@data.DTLOffice">@data.DTLOffice</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label>Application No</label>
                                    <input type="text" class="form-control" name="txtApplicationNo" id="txtApplicationNo" />
                                </div>
                                @*<div class="col-md-2">
                <label>Month</label>
                    <select id="selMonth" name="Month" class="form-control">
                        <option value="">Select Month</option>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
