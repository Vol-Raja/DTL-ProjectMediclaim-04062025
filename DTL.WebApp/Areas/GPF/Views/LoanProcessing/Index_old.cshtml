                        <option value="12">December</option>
                    </select>
                </div>

            <div class="col-md-2">
                <input type="text" name="txtYear" class="form-control numberOnly" placeholder="Year" maxlength="4" id="txtYear" />
            </div>
                                *@
                                <div class="col-md-2">
                                    <label>Status</label>
                                    <select id="selStatus" class="form-control">
                                        <option value="">Select Status</option>
                                        <option value="1">Pending</option>
                                        <option value="2">Approved</option>
                                        <option value="3">Reject</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label>Date</label>
                                    <input type="date" class="form-control" name="txtDate" id="txtDate" />
                                </div>
                                <div class="col-md-2 form-group">
                                    <label>Employee Id</label>
                                    <input type="text" name="" class="form-control" placeholder="Employee Id" maxlength="50" id="txtEmployeeId">
                                </div>
                                <div class="col-md-2 form-group text-center align-self-end">
                                    <button class="btn btn-lg btn-primary" type="button" id="btnSearch">Search</button>
                                    <a href="/GPF/Withdrawal" class="btn btn-lg btn-secondary" id="btnCancel">Cancel</a>
                                </div>
                            </div>
                            <hr />
                            <table id="tblLoanProcessing" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Sr. No.</th>
                                        <th>Employee Name</th>
                                        <th>Employer</th>
                                        <th>Employee ID</th>
