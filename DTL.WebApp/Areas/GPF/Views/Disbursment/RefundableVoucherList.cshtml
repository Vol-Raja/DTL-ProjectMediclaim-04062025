
@{ ViewData["Title"] = "Refundable Voucher List ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Voucher List</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="/">Dashboard</a><span class="px-1">/</span> 
            <a href="@Url.Action("VoucherApplicationDashboard","Disbursment",new {Area="GPF"})">Loan Voucher dashboard</a>
            <span class="px-1">/</span>
            <span>Refundable Voucher List</span>

        </p>
    </div>
    <div class="card border-card mt-0">
        <div class="card-body ps-0">
            <div class="mb-4  ">
              <div class="my-4 border_bottom pb-4 row">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-3 ">
                    <label class="form-label d-block mb-1">Voucher No  .</label>
                    <input id="txtVoucherNo" type="number" class="form-control form-control-sm"
                           placeholder="Voucher Number" />
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-3 ">
                    <label class="form-label d-block mb-1">Loan No.</label>
                    <input id="txtLoanNo" type="number" class="form-control form-control-sm"
                           placeholder="Loan Number" />
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-3">
                    <label class="form-label d-block mb-1">Emp No.</label>
                    <input id="txtPageNo" type="text" class="form-control form-control-sm"
                           placeholder="Emp Number" />
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-3  position-relative">
                    <button type="button" id="btnSearch" class="btn btn-success  position-absolute bottom-0"><i class="fa fa-search"></i></button>
                    <button type="button" id="btnClear" class="btn btn-danger position-absolute bottom-0 clear_btn"><i class="fa fa-times"></i></button>
                </div>
            </div>
            </div>
            <div class="table-responsive">
                <table id="tblrefundable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Date</th>
                            <th>Voucher No.</th>  
                            <th>Loan Application No.</th>
                            <th>Emp Id</th>
                            <th>Approved Amount</th>
                            <th>Account Number.</th>
                            <th>Back Name</th>
                            <th>IFSC Code</th>
                            <th>BIC Code</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>12/02/2022</td>
                            <td>VOU787878</td>
                            <td>734856</td>
                            <td>Emp678</td>

                            <td>1000 <span class="text-danger req_text">₹ *</span></td>
                            <td>DTL</td>
                            <td>8000</td>
                            <td>SBI008987</td>
                            <td>BIC090</td>
                            <td class="d-flex border-bottom-0">
                                <a href="@Url.Action("RefundableVoucherListView","Disbursment",new {Area="GPF"})" class="btn btn-primary btn-sm mr-2 btn_small">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                                <a href="#" class="btn btn-danger btn-sm mr-2 btn_small">
                                    <i class="fa fa-trash"
                                       aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>

    </div><!-- col -->
 </div>
  <script>
        $(document).ready(function () {
            $("#tblrefundable").DataTable({
                ordering: true,
                dom: 'lfrtip',
                scrollX: true,
            
            });
        })
    </script>