@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row header_section mx-0 px-0">
        <div class="col-6 position-relative ps-0">
            <span class="btn btn-light float-start mt-1 me-2 d-block d-md-none" id="menu_toggle">
                <i class="fa-solid fa-bars"></i>
            </span>
            <h3 class="mb-0">Employee Profile List</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a class="" href="@Url.Action("Dashboard","Processing",new { Area="GPF" })">Dashboard </a><span class="px-1">/</span><span>Employee Profile List</span>
        </p>
    </div>
    <div class="card border-card mt-0">
        <div class="card-body pt-0 ps-0 pr-2">


            <div class="border_bottom row mt-2 ">
                <div class="col-sm-6 col-md-6 col-lg-8 col-xl-8 my-4">
                    <div class="">
                        <button type="button" class="btn btn-primary btn-sm mr-2 "
                                onclick="location.href='@Url.Action("AddEmployeeForm","Employee",new { Area="GPF" })'">
                            Add New Employee
                        </button>
                       
                    </div>
                </div>

                <div class="col-sm-4 col-md-4 col-lg-3 col-xl-3 mb-3 justify-content-end mb-0 organization mt-2">
                    <label class="form-label d-block mb-1">Organization</label>

                    <select name="" id="" class="form-select ">
                        <option value="">Select</option>

                    </select>


                </div>
                <div class="col-sm-2 col-md-2 col-lg-1 col-xl-1  position-relative">
                    <button class="btn btn-success position-absolute emp_search"><i class="fa fa-search"></i></button>

                </div>
            </div>
            <div class="my-3">
                <table id="example1" class="table table-bordered ">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Organization</th>
                            <th>Employee ID</th>
                            <th>GPF Number</th>
                            <th>Employee Name</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Date of Joining</th>
                            <th>Date of Retirement</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>1</td>
                            <td>Organization</td>
                            <td>111</td>
                            <td>123456</td>
                            <td>Anis Mulani</td>
                            <td>anismulani1999@gmail.com</td>
                            <td>7057085889</td>
                            <td>20/02/2010</td>
                            <td>20/02/2022</td>
                            <td class="d-flex border-bottom-0">

                                <a href="@Url.Action("viewEmployeeProfile","Employee",new { Area="GPF" })" class="btn btn-primary btn-sm mr-2 btn_small">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                                <a href="#" class="btn btn-info btn-sm mr-2 btn_small">
                                    <i class="fa fa-pencil"
                                       aria-hidden="true"></i>
                                </a>
                                <a href="#" class="btn btn-danger btn-sm mr-2 btn_small">
                                    <i class="fa fa-trash"
                                       aria-hidden="true"></i>
                                </a>
                             



                                <!-- Modal -->

                            </td>
                        </tr>


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    (function ($) {

        $('#example1').DataTable({
            "ordering": false,
            "sScrollX": "100%",
            "sScrollXInner": "100%",
            "bAutoWidth": true,
            "bJQueryUI": true,
            "bRetrieve": true,
            "bAutoWidth": true,
            "scrollX": true,
        });
    })(jQuery);
</script>