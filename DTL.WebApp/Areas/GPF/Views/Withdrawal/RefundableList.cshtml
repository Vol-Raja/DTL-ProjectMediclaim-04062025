            </span>
            <h3 class="mb-0">@loanType List</h3>
        </div>
        <p class="mb-0 col-6 top_link_Section">
            <a href="@Url.Action("Index","Withdrawal", new { Area="GPF" })"> Dashboard</a><span class="px-1">/</span><a href="@Url.Action("Index","LoanProcessing", new { Area="GPF" })">Loan Application</a><span class="px-1">/</span><span>@loanType List</span>
