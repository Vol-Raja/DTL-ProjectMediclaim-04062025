@{
    ViewData["Title"] = "Refundable Loan Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .input-error {
        border-color:red;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="margin: 0px">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">GPF Refundable Withdrawal Request Form</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home", new { Area="" })">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard", new { Area="GPF" })">GPF</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Withdrawal", new { Area="GPF" })">GPF Withdrawal</a></li>
                        <li class="breadcrumb-item active">Refundable Withdrawal</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <form id="refundableForm" action="/" method="post">
                                <input type="hidden" id="hdnWithdrawalId" value="@ViewBag.EditWithdrawId" />
                                <input type="hidden" id="hdnUniqueNumber" />
                                <h4 class="bg-gradient-gray p-1 mb-3">Personal Information</h4>
                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Name of GPF Account Holder</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter name of GPF account holder" id="txtAccountHolderName" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Employee ID</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Employee ID" id="txtEmployeeId" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Designation</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Designation" id="txtDesignation" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Employer</label>
                                    </div>
                                    <div class="col-md-4">
                                        @*<input type="text" class="form-control mb-2" placeholder="Enter Employer" id="txtEmployer" />*@
                                        <select id="selEmployer" name="Employer" class="form-control">
                                            <option value="">Select DVBETBF-2002 Office</option>
                                            @foreach (var data in ViewBag.DTLOfficeList)
                                            {
                                                <option value="@data.DTLOffice">@data.DTLOffice</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Monthly GPF Pay</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Monthly GPF Pay" id="txtMonthlyGPFPay" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Date of Joining</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="date" class="form-control mb-2" id="txtDateOfJoining" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Purpose of Advance</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Purpose of Advance" id="txtPurposeOfWithdrawal" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Mobile No.</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Mobile Number" id="txtMobileNumber" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Dependant</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="" id="txtDependantsName" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Age</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Age" id="txtDependentsAge" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Address</label>
                                    </div>
                                    <div class="col-md-4">
                                        <textarea type="text" class="form-control mb-2" placeholder="Enter Address Here" id="txtDependentsAddress"></textarea>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Total Advance amount</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Total Advance amount" id="txtTotalAdvanceAmount" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">No. of EMI's</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="number" max="50" min="1" maxlength="2" class="form-control mb-2" placeholder="Enter No. of EMI's" id="txtNoOfEMI" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Place of posting of last three year</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Place of posting of last three year" id="txtPostingLastThreeYear" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Monthly Deduction</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Monthly Deduction" id="txtMonthlyDeduction" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Date of Application</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="date" class="form-control mb-2" id="txtDateOfApplication" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Purpose of Refundable</label>
                                    </div>
                                    <div class="col-md-4">
                                        <select id="selPurposeOfRefundable" class="form-control">
                                            <option>Select</option>
                                            <option>BHAT</option>
                                            <option>Cost of Defence</option>
                                            <option>Cost of Legal Proceedings</option>
                                            <option>Education</option>
                                            <option>Illness</option>
                                            <option>Obligatory Expenses</option>
                                            <option>Purchase of Two Wheeler</option>
                                            <option>Purchasing consumer Durables</option>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Detailed Reason of Application of Advance</label>
                                    </div>
                                    <div class="col-md-4">
                                        <textarea type="text" class="form-control mb-2" placeholder="Enter Detailed Reason of Application of Advance Here" id="txtReasonOfAdvance"></textarea>
                                    </div>

                                </div>

                                <h4 class="bg-gradient-gray p-1 mb-3 mt-4">Bank Details</h4>
                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Bank Account No.</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Bank Account Number" id="txtBankAccountNo" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">IFSC No.</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter IFSC Number" id="txtIFSCNo" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Brance Name</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Bank Brance Name" id="txtBranchName" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">BIC</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter BIC" id="txtBC" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Bank Name</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control mb-2" placeholder="Enter Bank Name" id="txtBankName" />
                                    </div>


                                </div>
                                <h4 class="bg-gradient-gray p-1 mb-3 mt-4">Document</h4>
                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">Salary Slip</label>
                                    </div>
                                    <div class="col-md-4 mb-2">
                                        <input type="file" class="form-control" id="fileUploadSalarySlip" multiple />
                                        <small>You can Select Multiple files</small>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-primary btn-sm" id="btnUploadSalarySlip">Upload</button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="w-100 form-label text-right">ID Card</label>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="file" class="form-control mb-2" id="fileUploadIdCard" />

                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-primary btn-sm" id="btnUploadIdCard">Upload</button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <table id="tblDocument" class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th style="width:80%">Document</th>
                                                    <th style="width:20%">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                        <hr />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 p-3 text-right" style="background: aliceblue;">
                                        <a class="btn btn-primary" data-toggle="modal" data-backdrop="static" data-keyboard="false" id="submit_form">Submit</a>
                                        <a class="btn btn-info hide_submit" data-toggle="modal" data-backdrop="static" data-keyboard="false" id="save_form">Save</a>
                                        <a class="btn btn-danger hide_submit" id="cancel_form">Cancel</a>
                                        <a class="btn btn-primary d-none show_submit">View Application</a>
                                    </div>
                                </div>

                            </form>
                            <!-- Modal -->
                            <div class="modal fade" id="on_submit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">

                                        <button type="button" class="close text-right p-3" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>

                                        <div class="modal-body text-center">
                                            <p><i class="fa fa-check-circle display-4 text-success"></i></p>
                                            <label id="lblSubmitModal"></label>
                                            <p>Form Submitted Successfully.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <!-- onclick goto to its view page -->
                                            <button class="btn btn-primary" id="btnViewRefundableGPFApplication">View Application</button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- /Modal -->
                            <!-- Modal -->
                            <div class="modal fade" id="on_save" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">

                                        <button type="button" class="close text-right p-3" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>

                                        <div class="modal-body text-center">
                                            <p><i class="fa fa-check-circle display-4 text-success"></i></p>
                                            <p>Form Saved Successfully.</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- /Modal -->
                            <div class="modal fade" id="on_upload" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">

                                        <button type="button" class="close text-right p-3" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>

                                        <div class="modal-body text-center">
                                            <p><i class="fa fa-check-circle display-4 text-success"></i></p>
                                            <p id="documentMessage">Document uploaded successfully</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- Modal -->
                            <div class="modal fade" id="validationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Error Message</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p><strong><label id="lblErrorMessage"></label></strong></p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section RefundableGPFWithdrawal{
<script type="text/javascript" src="~/js/GPF/refundablegpfwithdrawal.js"></script>

<script>
    $(".show_submit").hide();

    $("#btnSubmit").click(function () {
        $(".hide_submit").hide();
        $(".show_submit").show();
    });
</script>
}