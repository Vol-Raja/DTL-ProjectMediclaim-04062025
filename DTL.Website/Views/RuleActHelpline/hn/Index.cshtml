@using DTL.Model.Models.CMS

@{
    ViewData["Title"] = "सिटीजन चार्टर";
    Layout = "~/Views/Shared/hn/_Layout.cshtml";
}


@model IEnumerable<RuleActHelplineModel>;


<section id="header_section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>सिटीजन चार्टर</h1>
                <p><a href="@Url.Action("","home")">मुख पृष्ठ</a> / <span>सिटीजन चार्टर/अधिनियम और नियम</span></p>
            </div>
        </div>
    </div>
</section>

<section id="main_page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="sidebar">

                    <div class="tab">
                        <a class="tablinks active" href="#">अधिनियम और नियम</a>
                        <a class="tablinks" href="@Url.Action("","RuleActHelpline",new{ IsHelpline=true})">हेल्पलाइन</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12 shadow mb-5">
                <div class="main_content">
                    <div class="tabcontent hospital_list">

                        <table class="table table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th> क्रमांक</th>
                                    <th>शीर्षक</th>
                                    <th>संपर्क संख्या</th>
                                    <th>दस्तावेज़</th>

                                </tr>
                            </thead>
                            <tbody>

                                @if (Model.Count() > 0)
                                {
                                    int counter = 0;
                                    @foreach (var item in Model)
                                    {
                                        counter++;
                                        <tr>
                                            <td>@counter</td>
                                            <td>@item.TitleInHindi</td>
                                            <td>@item.ContactNumberInHindi</td>

                                            <td>
                                                <a target="_blank" href='@Url.Action("DownloadFile","RuleActHelpline", new {id = @item.ID})'>
                                                    <i class="fa fa-file-pdf-o text-danger" aria-hidden="true"></i>
                                                    
                                                </a>
                                            </td>



                                        </tr>
                                    }

                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


