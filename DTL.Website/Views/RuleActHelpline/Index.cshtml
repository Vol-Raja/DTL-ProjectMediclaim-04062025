@using DTL.Model.Models.CMS

@{
    ViewData["Title"] = "About us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<RuleActHelplineModel>;


<section id="header_section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>Citizen Charter</h1>
                <p><a href="@Url.Action("","home")">Home</a> / <span>Citizen Charter /Act And Rules</span></p>
            </div>
        </div>
    </div>
</section>

<section id="main_page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="sidebar">
                    
                    <div class="tab">
                        <a class="tablinks active" href="#">Act And Rules</a>
                        <a class="tablinks" href="@Url.Action("","RuleActHelpline",new{ IsHelpline=true})">Helpline</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12 shadow mb-5">
                <div class="main_content">
                    <div class="tabcontent hospital_list">
                       
                        <table class="table table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>Title</th>
                                    <th>Contact Number</th>
                                    <th>Document</th>

                                </tr>
                            </thead>
                            <tbody>

                                @if (Model.Count() > 0)
                                {
                                    int counter = 0;
                                    @foreach (var item in Model)
                                    {
                                        counter++;
                                        <tr>
                                            <td>@counter</td>
                                            <td>@item.TitleInEnglish</td>
                                            <td>@item.ContactNumber</td>

                                            <td>
                                                <a target="_blank" href='@Url.Action("DownloadFile","RuleActHelpline", new {id = @item.ID})'>
                                                    <i class="fa fa-file-pdf-o text-danger" aria-hidden="true"></i> 
                                                </a>
                                            </td>



                                        </tr>
                                    }

                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


