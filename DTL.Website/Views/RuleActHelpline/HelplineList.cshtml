@using DTL.Model.Models.CMS

@{
    ViewData["Title"] = "About us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<RuleActHelplineModel>;


<section id="header_section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>Citizen Charter</h1>
                <p><a href="@Url.Action("","home")">Home</a> / <span>Citizen Charter /Helpline</span></p>
            </div>
        </div>
    </div>
</section>

<section id="main_page">
    <div class="container">

        <div class="sidebar">

            <div class="tab">
                <a class="tablinks " href="@Url.Action("","RuleActHelpline")">Act And Rules</a>
                <a class="tablinks active" href="#">Helpline</a>
            </div>
        </div>

        <div class="col-md-12 shadow mb-5  px-0">
            <div class="main_content">
                <div class="tabcontent hospital_list">

                    <table class="table table-bordered table-hover" id="myTable">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.Count() > 0)
                            {
                                int counter = 0;
                                @foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td>@counter</td>
                                        <td>@item.HelplineDescription</td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

</section>


