                                <li>
                                    <div class="news_div">
                                        <a>
                                            <div class="date">@news.WhatsNewDate.Day</div>
                                            <div class="other">
                                                <span>@news.WhatsNewDate.ToString("MMMM"), @news.WhatsNewDate.ToString("yyyy")</span>
                                                <p>@news.TitleInEnglish</p>
                                            </div>
                                        </a>
                                    </div>
