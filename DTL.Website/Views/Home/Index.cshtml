<style>
    .tabs {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
    }

    .AimVisionbtn {
        padding: 4px 0px;
        font-size: 15px;
        cursor: pointer;
        border: none;
        background-color: #01173b00;
        color: white;
        border-radius: 20px;
        font-weight: 600;
    }

        .AimVisionbtn.active {
            background-color: #ffffff;
            color: #01173b;
        }

    AimVisionsections {
        background-color: #01173b;
    }

    .AimVisioncontent.active {
        display: block;
    }



    .AimVisioncontent {
        display: none;
    }

</style>

