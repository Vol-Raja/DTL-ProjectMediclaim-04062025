@using DTL.Model.Models.CMS;

@{
    ViewData["Title"] = "Link List";

}
@model IEnumerable<LinkModel>;

<section id="header_section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>Important Links</h1>
                <p><a href="@Url.Action("Index","Home")">Home</a> / <span>Important Links</span></p>
            </div>
        </div>
    </div>
</section>

<section id="main_page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="sidebar">

                    <div class="tab">
                        <a class="tablinks " href="#">Latest News</a>
                        <a class="tablinks" href="@Url.Action("","notice")">Public Notice</a>
                        <a class="tablinks active" href="@Url.Action("","link")">Important links</a>
                        <a class="tablinks" href="@Url.Action("","BannerImage")">Gallery</a>
                        <a class="tablinks" href="@Url.Action("" , "event")">Events</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12 shadow">
                <div class="main_content">
                    <div class="tabcontent hospital_list">
                        <div class="row">
                            @if (Model.Count() > 0)
                            {
                                int counter = 0;
                                @foreach (var item in Model)
                                {
                                    string imgSrc = "~/assets/images/1.jpg";
                                    if (item.FileContent != null)
                                    {
                                        var base64 = Convert.ToBase64String(item.FileContent);
                                        imgSrc = String.Format("data:{0};base64,{1}", item.ContentType, base64);
                                    }
                                    counter++;
                                    <div class="col-sm-12 ">
                                        <a href="@item.Link" target="_blank">
                                            <div class="media WhatNewMedia Important_link align-items-center">

                                                <img class="align-self-start mr-3 shadow" src="@imgSrc" alt="">
                                                <div class="media-body pt-2">
                                                    <h5 class="mt-0 text-capitalize text-black">@item.Title</h5>
                                                </div>


                                            </div>
                                        </a>
                                    </div>

                                }

                            }
                        </div>

