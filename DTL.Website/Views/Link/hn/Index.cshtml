            </div>
            <div class="col-md-12 shadow mb-5">
                <div class="main_content">
                    <div class="tabcontent hospital_list">
                        <div class="row">
                            @if (Model.Count() > 0)
                            {
                                int counter = 0;
                                @foreach (var item in Model)
                                {
                                    string imgSrc = "~/assets/images/1.jpg";
                                    if (item.FileContent != null)
                                    {
                                        var base64 = Convert.ToBase64String(item.FileContent);
                                        imgSrc = String.Format("data:{0};base64,{1}", item.ContentType, base64);
                                    }
                                    counter++;
                                    <div class="  col-sm-12 ">
                                        <a href="@item.Link" target="_blank">
                                            <div class="media WhatNewMedia Important_link align-items-center">

                                                <img class="align-self-start mr-3 shadow" src="@imgSrc" alt="">
                                                <div class="media-body pt-2">
                                                    <h5 class="mt-0 text-capitalize text-black">@item.TitleHindi</h5>
                                                </div>


                                            </div>
                                        </a>
                                    </div>

                                }

                            }
                        </div>


                    </div>


                </div>
            </div>
            <div class="col-sm-12">
