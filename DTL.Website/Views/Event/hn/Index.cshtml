@using DTL.Model.Models.CMS

@{
    ViewData["Title"] = "कार्यक्रम";
    Layout = "~/Views/Shared/hn/_Layout.cshtml";

}
@model IEnumerable<EventModel>;

<section id="header_section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>कार्यक्रम</h1>
                <p><a href="@Url.Action("","home")">मुख पृष्ठ</a> / <span>मीडिया /कार्यक्रम</span></p>
            </div>
        </div>
    </div>
</section>

<section id="main_page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="sidebar">

                    <div class="tab">
                        <a class="tablinks " href="@Url.Action("","WhatsNew")"> नवीनतम समाचार</a>
                        <a class="tablinks" href="@Url.Action("","notice")">सार्वजनिक सूचना</a>
                        <a class="tablinks " href="@Url.Action("","link")">महत्वपूर्ण लिंक</a>
                        <a class="tablinks" href="@Url.Action("","BannerImage")">गैलरी</a>
                        <a class="tablinks active" href="@Url.Action("" , "event")">कार्यक्रम</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12 shadow ">
                <div class="main_content">
                    <div class="tabcontent hospital_list">

                        <table class="table table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th> क्रमांक.</th>
                                    <th>कार्यक्रम शीर्षक</th>
                                    <th>दिनांक </th>
                                    <th>दस्तावेज़</th>

                                </tr>
                            </thead>
                            <tbody>

                                @if (Model.Count() > 0)
                                {
                                    int counter = 0;
                                    @foreach (var item in Model)
                                    {
                                        counter++;
                                        <tr>
                                            <td>@counter</td>
                                            <td>@item.TitleInHindi</td>
                                            <td>@item.EventDate.ToString("dd-MM-yyyy")</td>

                                            <td class="d-flex justify-content-around">
                                                <a href='@Url.Action("downloadFile","event", new {id = @item.ID, lang="hn"})'
                                           target="_blank" aria-hidden="true"><i class="fa fa-file-pdf-o text-danger mx-2" aria-hidden="true"></i></a>
                                            </td>

                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

