@using DTL.Model.Models.CMS;
@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<EventModel>;
<section id="header_section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>Events</h1>
                <p><a href="@Url.Action("","home")">Home</a> / <span>Media /Events</span></p>
            </div>
        </div>
    </div>
</section>
<section id="main_page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="sidebar">
                    <div class="tab">
                        <a class="tablinks " href="@Url.Action("","WhatsNew")">Latest News</a>
                        <a class="tablinks" href="@Url.Action("","notice")">Public Notice</a>
                        <a class="tablinks " href="@Url.Action("","link")">Important links</a>
                        <a class="tablinks" href="@Url.Action("","BannerImage")">Gallery</a>
                        <a class="tablinks active" href="@Url.Action("" , "event")">Events</a>
                    </div>
                </div>
            </div>
            <div class="col-md-12 shadow mb-5">
                <div class="main_content">
                    <div class="tabcontent hospital_list">
                        <table class="table table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>Events Title</th>
                                    <th>Date</th>
                                    <th>Document</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    int counter = 0;
                                    @foreach (var item in Model)
                                    {
                                        counter++;
                                        <tr>
                                            <td>@counter</td>
                                            <td>@item.TitleInEnglish</td>
                                            <td>@item.EventDate.ToString("dd-MM-yyyy")</td>

                                            <td class="d-flex justify-content-around">
                                                <a href='@Url.Action("downloadFile","event", new {id = @item.ID})'
                                                   target="_blank" aria-hidden="true"><i class="fa fa-file-pdf-o text-danger mx-2" aria-hidden="true"></i></a>
                                            </td>

                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
